<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="setu_prefered_delivery_methods_inherit_view_partner_form" model="ir.ui.view">
        <field name="name">setu.prefered.delivery.methods.inherit.view.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_product_pricelist']" position="after">
                <field name="preferred_delivery_method_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']//group[@name='point_of_sale']" position="before">
                <group string="Assigned carrier" name="assigned_carrier_for"
                       invisible="property_delivery_carrier_id == False">
                    <field name="shipping_carrier_ids" invisible="1"/>
                    <field name="package_partner_id" domain="[('id','in',shipping_carrier_ids)]"
                           options="{'no_create': True, 'no_open': True}"/>
                    <field name="pallet_partner_id" domain="[('id','in',shipping_carrier_ids)]"
                           options="{'no_create': True, 'no_open': True}"/>
                    <field name="overdimensioned_partner_id" domain="[('id','in',shipping_carrier_ids)]"
                           options="{'no_create': True, 'no_open': True}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>