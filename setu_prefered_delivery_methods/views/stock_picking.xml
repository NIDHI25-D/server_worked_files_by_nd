<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_picking_withcarrier_out_form_inherit" model="ir.ui.view">
            <field name="name">view.picking.withcarrier.out.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='carrier_id']" position="attributes">
                    <attribute name="domain">[('id','in',available_carrier_ids)]</attribute>
                    <attribute name="string">Shipping Method</attribute>
                </xpath>
                <xpath expr="//field[@name='carrier_id']" position="after">
                    <field name="shipping_carrier_id" string="Carrier"/>
                    <field name="available_carrier_ids" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='l10n_mx_edi_transport_type']" position="after">
                    <field name="package_picking_id" readonly="1"/>
                    <field name="pallet_picking_id" readonly="1"/>
                    <field name="overdimensioned_picking_id" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>