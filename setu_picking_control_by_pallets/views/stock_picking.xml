<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_picking_form_inherited_pallet" model="ir.ui.view">
            <field name="name">view.picking.form.inherited.pallet</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="package_count"/>
                    <field name="pallet_count"/>
                    <field name="box_count"/>
                    <field name="is_security_scanned_process" readonly="1"/>
                </xpath>
                <!-- Massive package button within the transfer movement page. {https://app.clickup.com/t/86drr45hq} -->
                <xpath expr="//button[@name='action_put_in_pack']" position="after">
                    <button class="oe_highlight float-start mx-2" name="action_massive_package" type="object" string="Massive package" invisible="state in  ('draft', 'done', 'cancel')" data-hotkey="shift+g"/>
                </xpath>
                <!-- Change position of Put in Pack button} #Jatin-->
                <xpath expr="//button[@name='action_put_in_pack']" position="attributes">
                    <attribute name="class" remove="float-end" add="float-start" separator=" "/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="package_pallet_type_inherit_view" model="ir.ui.view">
            <field name="name">Package Pallet Type Inherit View</field>
            <field name="model">choose.delivery.package</field>
            <field name="inherit_id" ref="stock_delivery.choose_delivery_package_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='delivery_package_type_id']" position="after">
                    <field name="package_type" />
                    <field name="carrier_id" invisible="1" />
                </xpath>
                <label for="shipping_weight" position="attributes">
<!--                    <attribute name="attrs">-->
<!--                        {'invisible': [('package_type', '=', False)]}-->
<!--                    </attribute>-->
                    <attribute name="invisible">package_type == False</attribute>
                </label>

                <div name="package_weight" position="attributes">
                    <attribute name="invisible">package_type == False</attribute>
                </div>

                <xpath expr="//field[@name='delivery_package_type_id']" position="attributes">
                    <attribute name="invisible">carrier_id == False</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>