<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_minimum_price_add" model="ir.ui.view">
            <field name="name">product.minimum.price.add</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']" position="inside">
                    <group name="minimum" string="Minimum Price Configuration"
                           invisible="is_minimum_price == False">
                        <field name="is_minimum_price" invisible="1" readonly="1"/>
                        <field name="minimum_price_option"/>
                        <field name="minimum_price_amount" widget="monetary"
                               invisible="minimum_price_option != 'amount'"/>
                        <field name="minimum_price_percentage" invisible="minimum_price_option != 'percentage'" />
                        <field name="minimum_price" widget="monetary" options="{'currency_field': 'currency_id'}" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
