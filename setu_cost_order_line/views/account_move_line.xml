<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="add_field_picking_ids_to_account_move_line" model="ir.ui.view">
        <field name="name">add.field.picking_ids.to.account.move.line</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='quantity']" position="before">
                <field name="picking_ids" widget="many2many_tags" options="{'no_create': True}" />
                <button class="oe_stat_button"
                        name="action_view_pickings"
                        type="object"
                        icon="fa-external-link">
                    <!--                string="Pickings">-->
                </button>
            </xpath>
            <!--            task:- Total Amount is not displayed          https://app.clickup.com/t/86dxvr78c?comment=90170150822857-->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_total']" position="attributes">
                <attribute name="column_invisible">parent.move_type in ['in_invoice', 'in_refund', 'in_receipt']</attribute>
                <attribute name="string">Tax inc Amount</attribute>
                <attribute name="optional">show</attribute>
            </xpath>
        </field>
    </record>
</odoo>