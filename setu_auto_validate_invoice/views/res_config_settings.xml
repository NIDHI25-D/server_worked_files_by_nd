<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_note_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.invoice.notw</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='quotation_order_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="invoice_note_zero_tax"/>
                        <div class="text-muted">
                            Add Notes in Invoice for Zero Tax Configured
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="invoice_note_zero_tax" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="cancel_sale_order_days"/>
                        <div class="text-muted">
                            Add Days to Cancel Sale Orders
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="cancel_sale_order_days" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="delete_sale_order_days"/>
                        <div class="text-muted">
                            Add Days to Delete Sale Orders
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="delete_sale_order_days" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="cancel_sale_order_days_automatically"/>
                        <div class="text-muted">
                            Add Days to cancel Sale Orders automatically those delivered and invoice qty is zero.
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="cancel_sale_order_days_automatically" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>


    <record id="res_config_settings_view_form_inherit_l10n_mx_edi_extended" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.l10n_mx_edi_extended</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="l10n_mx_edi.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='l10n_mx_edi_settings']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box"
                         title="The Parameter is to disable automatic signing Invoices">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Disable Automatically Sign Invoices</span>
                            <div class="text-muted">If checked, then invoice will not be confirmed and signed automatically and stays in draft state.</div>
                            <div class="row mt16">
                                <label for="disable_inv_automatic_sign" class="col-lg-3 o_light_label"/>
                                <field name="disable_inv_automatic_sign"/>
                            </div>
                        </div>
                    </div>

                    <setting string="Sign User" help="Select User from mail will sent while sign the journal entry">
                        <div class="row">
                            <label for="sign_user_id" class="col-lg-3 o_light_label"/>
                            <field name="sign_user_id"/>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
</odoo>
