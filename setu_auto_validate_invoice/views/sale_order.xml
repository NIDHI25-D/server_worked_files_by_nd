        <record id="sale_order_search_view_to_order_without_signed" model="ir.ui.view">
            <field name="name">Sale order search view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='my_quotation']" position="after">
                    <filter string="Orders remain to invoice" name="is_invoice_create_from_cron"
                            domain="[('is_invoice_create_from_cron','=',True)]"/>
                </xpath>
            </field>
        </record>

        <record id="sale_order_search_view_to_order_without_signed" model="ir.ui.view">
            <field name="name">Sale order search view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_sale"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='to_invoice']" position="after">
                    <filter string="Orders remain to invoice" name="is_invoice_create_from_cron"
                            domain="[('is_invoice_create_from_cron','=',True)]"/>
                </xpath>
            </field>
        </record>

        <record id="disable_invoice_auto_sign_view" model="ir.ui.view">
            <field name="name">disable.invoice.auto.sign.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="marvelfields.view_detener_factura_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='dfactura']" position="after">
                    <field name="disable_invoice_auto_sign"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>