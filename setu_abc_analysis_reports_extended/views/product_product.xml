<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="sales_classification_analysis_reports_form" model="ir.ui.view">
            <field name="name">product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="priority">21</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='inventory']/group[@name='inventory']" position="after">
                    <group string="ABC Classification">
                        <group>
                            <group><field name="abc_classification"/></group>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="setu_abc_sales_analysis_bi_report_searchview_cmpwise" model="ir.ui.view">
            <field name="name">setu.abc.sales.analysis.bi.report.searchview.cmpwise</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <separator/>
                        <filter string="High Sales" name="abc_high" domain="[('abc_classification', '=', 'A')]"/>
                        <filter string="Medium Sales" name="abc_medium" domain="[('abc_classification', '=', 'B')]"/>
                        <filter string="Low Sales" name="abc_low" domain="[('abc_classification', '=', 'C')]"/>
                    <separator/>
                   <group expand="1" string="Group By">
                   		<filter string="ABC Classification" name="abc_classification" context="{'group_by':'abc_classification'}"/>
                	</group>
                </field>
            </field>
        </record>
    </data>
</odoo>
