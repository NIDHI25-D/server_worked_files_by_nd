<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_note_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.invoice.notw</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr=".//block[@name='quotation_order_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="upgrade_product_classification"/>
                        <div class="text-muted">
                            Configure days to Upgrade Product Classification for ABC Sales Analysis
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="upgrade_product_classification" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>