<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_purchase_order_form_inherit_forecast" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.forecast</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group//group//field[@name='company_id']" position="after">
                <field name="is_forecast_po" readonly="1" invisible="0" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>
