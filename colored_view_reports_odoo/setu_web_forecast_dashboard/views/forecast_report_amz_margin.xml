<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_forecast_report_amz_margin_tree" model="ir.ui.view">
        <field name="name">forecast_report_amz_margin_tree</field>
        <field name="model">forecast.report.amz.margin</field>
        <field name="arch" type="xml">
            <tree string="AMZ Margins" create="false">
                <field name="forecast_report_date_amz_margin"/>
                <field name="amz_margin" widget="percentage"/>
            </tree>
        </field>
    </record>

    <record id="action_forecast_report_amz_margin" model="ir.actions.act_window">
        <field name="name">AMZ Margin</field>
        <field name="res_model">forecast.report.amz.margin</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
