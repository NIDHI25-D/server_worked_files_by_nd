<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_line_tree_view_extended" model="ir.ui.view">
            <field name="name">account_move_line.tree_extended</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_currency']" position="attributes">
                    <attribute name="invisible">not amount_currency</attribute>
                </xpath>
                <xpath expr="//field[@name='date']" position="after">
                    <field name="move_id" widget="many2one"/>
                </xpath>
                <xpath expr="//field[@name='move_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='credit']" position="after">
                    <field name="blocked" string="Exclude from Follow-ups" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
