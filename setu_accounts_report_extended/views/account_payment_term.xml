<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="account_payment_term_report_extended" model="ir.ui.view">
            <field name="name">account_payment_term_report_extended.form</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='early_discount']" position="after">
                    <label for="send_debit_balance_report"/>
                    <field name="send_debit_balance_report"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
