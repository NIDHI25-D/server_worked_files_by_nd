<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_move_forcefully_reconcile_form_inherit" model="ir.ui.view">
            <field name="name">account_move_forcefully_reconcile.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="statement_line_id" invisible="1"/>
                    <button name="action_post" string="POST Forcefully" type="object"
                            context="{'skip_account_move_synchronization':True}"
                            invisible="statement_line_id == False or state in ('posted','cancel')"
                    />
                    <button name="button_draft" string="Reset To Draft Forcefully" type="object"
                            context="{'skip_account_move_synchronization':True}"
                            invisible="statement_line_id == False or state in ('draft','cancel')"
                    />

                </xpath>
            </field>
        </record>

        <record id="view_account_move_form_inherit_purchase" model="ir.ui.view">
            <field name="name">view_account_move_form_inherit_purchase.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="purchase.view_move_form_inherit_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//t/field[@name='purchase_vendor_bill_id']" position="after">
                    <field name="related_po"/>
                    <field name="related_so_id" invisible="move_type != 'out_refund'"/>
                    <field name="schedule_date" invisible="move_type != 'in_invoice'" readonly="state != 'draft'"/>
                    <!--task : https://app.clickup.com/t/86duhapac  for reference only.-->
                    <field name="is_bonificacion" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="add_field_amount_residual" model="ir.ui.view">
            <field name="name">add_field_amount_residual</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total_in_currency_signed']" position="after">
                    <field name="amount_residual" invisible="context.get('default_move_type') != 'in_invoice'"
                           string="Amount Residual"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>