<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="setu_accounts_report_extended.AccountReportLineNameCustomizable_extended"
       t-inherit="account_reports.AccountReportLineNameCustomizable" t-inherit-mode="extension">
        <xpath expr="//div[@data-id='caret_options']" position="inside">
            <t t-if="this.controller.action.xml_id == 'account_reports.action_account_report_pl'">
                <div class="o-dropdown-item dropdown-item o-navigable"
                     t-on-click="(ev) => controller.reportAction(ev, 'open_journal_items_profit_and_loss_report', { line_id: props.line.id })"
                >
                    Journal Items
                </div>
            </t>
        </xpath>
    </t>
</templates>
