<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
<!--        chatters are not the same as per version 18 in MELI base view-->
        <record id="view_meli_orders_form_extended" model="ir.ui.view">
            <field name="name">mercadolibre.orders.form.extended</field>
            <field name="model">mercadolibre.orders</field>
            <field name="inherit_id" ref="meli_oerp.view_meli_orders_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//div[hasclass('oe_chatter')]" position="replace">
                    <chatter/>
                </xpath>
            </field>
        </record>

        <record id="view_meli_shipment_form_extended" model="ir.ui.view">
            <field name="name">mercadolibre.shipment.form.extended</field>
            <field name="model">mercadolibre.shipment</field>
            <field name="inherit_id" ref="meli_oerp.view_meli_shipment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//div[hasclass('oe_chatter')]" position="replace">
                    <chatter/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
