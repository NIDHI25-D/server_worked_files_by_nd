<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="setu_website_preorder.cancelorderModal" owl="1">
        <Dialog title.translate="Cancel Sale Order">
            <t t-if="props.orderId">
                <t t-if="props.currentDate &lt;= props.orderCancelLimitTime">
                    Are you sure you want to cancel this sale order?
                </t>
                <t t-elif="props.currentDate &gt; props.orderCancelLimitTime">
                    Your order cannot be canceled because the time limit has been exceeded or because your order is already in the fulfillment process
                </t>
                <t t-set-slot="footer">
                    <t t-if="props.currentDate &lt;= props.orderCancelLimitTime">
                        <button class="btn btn-primary o_wsale_cancelorder_confirm" t-on-click="confirmCancelorder">
                            Yes
                        </button>
                        <button class="btn btn-secondary o_wsale_cancelorder_cancel"
                                t-on-click.stop.prevent="props.close">
                            Discard
                        </button>
                    </t>
                    <t t-elif="props.currentDate &gt; props.orderCancelLimitTime">
                        <t t-set-slot="footer">
                            <button class="btn btn-secondary o_wsale_cancelorder_timelimit_cancel"
                                    t-on-click.stop.prevent="props.close">
                                Discard
                            </button>
                        </t>
                    </t>
                </t>
            </t>
        </Dialog>
    </t>
</templates>
