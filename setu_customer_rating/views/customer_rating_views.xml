<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- List View-->
        <record id="customer_rating_list_view" model="ir.ui.view">
            <field name="name">setu_customer_rating.customer_rating.list</field>
            <field name="model">customer.rating</field>
            <field name="arch" type="xml">
                <list string="Customer Rating" editable="bottom">
                    <field name="company_id"/>
                    <field name="from_score"/>
                    <field name="to_score"/>
                    <field name="rating"/>
                </list>
            </field>
        </record>

        <!-- Action View-->
        <record id="customer_rating_act_window" model="ir.actions.act_window">
            <field name="name">Customer Ratings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">customer.rating</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_group_by_company':1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Rating Rule..
                </p>
            </field>
        </record>

        <!-- Search View-->
        <record id="customer_rating_search_view" model="ir.ui.view">
            <field name="name">setu_customer_rating.customer_rating.search</field>
            <field name="model">customer.rating</field>
            <field name="arch" type="xml">
                <search string="Customer Ratings">
                    <field name="rating"/>
                    <group expand="1" string="Group By">
                        <filter string="Company" name="group_by_company" domain="[]"
                                context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>