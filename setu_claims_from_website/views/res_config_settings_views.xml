<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_setu_claims_from_website" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.setu.claims.from.website</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="100"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Claim" id="claim" string="Claims" name="setu_claims_from_website">
                        <block title="Claims Management" id="claim_setting">
                            <div data-string="Claims"
                                 string="Claims"
                                 data-key="setu_claims_from_website">
                                <h2>Claims</h2>
                                <div class="row mt16 o_settings_container">
                                    <group name="claim_report_address">
                                        <field name="claim_report_address"/>
                                    </group>
                                </div>
                                <div class="row mt16 o_settings_container">
                                    <div class="col-12 col-lg-6 o_setting_box" id="enable_pre_order">
                                        <div class="o_setting_left_pane">
                                            <field name="enable_claim"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <label for="enable_claim"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
