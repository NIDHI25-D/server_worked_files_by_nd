<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="category_crm_claim" model="ir.module.category">
            <field name="name">Claim</field>
            <field name="sequence">100</field>
        </record>

        <record id="group_claim_only_read" model="res.groups">
            <field name="name">Only Read</field>
            <field name="category_id" ref="category_crm_claim"/>
            <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
        </record>

        <record id="group_claim_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="category_crm_claim"/>
            <field name="implied_ids" eval="[(4, ref('group_claim_only_read'))]"/>
        </record>

        <record id="group_claim_administrator" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="category_crm_claim"/>
            <field name="implied_ids" eval="[(4, ref('group_claim_user'))]"/>
        </record>

    </data>

</odoo>