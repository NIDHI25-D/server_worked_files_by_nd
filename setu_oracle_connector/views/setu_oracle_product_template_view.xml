<?xml version="1.0" ?>
<odoo>
    <record id="setu_oracle_product_template_tree_view" model="ir.ui.view">
        <field name="name">setu.oracle.product.template.tree.view</field>
        <field name="model">setu.oracle.product.template</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
                <field name="odoo_product_category_id"/>
                <field name="multi_ecommerce_connector_id"/>
                <field name="odoo_product_tmpl_id"/>
                <field name="product_published_defined"/>
                <field name="is_oracle_template_exported_oracle" widget="boolean_toggle" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="setu_oracle_product_template_search_view" model="ir.ui.view" >
        <field name="name">setu.oracle.product.template.search.view</field>
        <field name="model">setu.oracle.product.template</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Oracle Products">
                <field name="name" filter_domain="[('name','ilike',self)]"/>
                <field name="multi_ecommerce_connector_id"/>
                <field name="odoo_product_category_id"/>
                <field name="odoo_product_tmpl_id"/>
                <field name="oracle_tmpl_id" string="Oracle Template Id"/>
                <filter string="Exported In Oracle" name="exported_in_oracle" icon="terp-accessories-archiver"  domain="[('is_oracle_template_exported_oracle','=','True')]"/>
                <filter string="Not Exported In Oracle" name="not_exported_in_oracle" icon="terp-accessories-archiver"  domain="[('is_oracle_template_exported_oracle','!=','True')]"/>
                <filter string="Published in Online" name="published_in_online" icon="terp-accessories-archiver"  domain="[('product_published_defined','=','True')]"/>
                <filter string="Unpublished in Online" name="unpublished_in_online"  icon="terp-accessories-archiver"   domain="[('product_published_defined','!=','True')]"/>
                <filter string="Archived"  name="archive_products"  icon="terp-accessories-archiver" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Exported In Oracle" name="Exported In Oracle" domain="[]" context="{'group_by':'is_oracle_template_exported_oracle'}"/>
                    <filter string="e-Commerce Connector" name="multi_ecommerce_connector_id" context="{'group_by':'multi_ecommerce_connector_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="setu_oracle_product_template_form_view" model="ir.ui.view">
        <field name="name">setu.oracle.product.template.form.view</field>
        <field name="model">setu.oracle.product.template</field>
        <field name="arch" type="xml">
            <form string="Oracle Product Form View" create="false">
                <sheet>
                    <field name="active" class="oe_inline" invisible='1'/>
                    <div class="ribbon ribbon-top-right"  attrs="{'invisible': [('active','=',True)]}">
                        <span class="bg-danger">Archived</span>
                    </div>

<!--                    <div class ="oe_button_box" name="button_box" >-->
<!--                        <button type="object" name="oracle_product_publish_unpublish" class="oe_stat_button"  groups="base.group_system" icon="fa-frown-o" context="{'publish': 'un_publish'}" attrs="{'invisible': ['|',('is_oracle_template_exported_oracle','=',False),('product_published_defined','=','unpublished')]}">-->
<!--                            <span class="o_stat_text">Un-Publish Product</span>-->

<!--                        </button>-->
<!--                        <button type="object" name="oracle_product_publish_unpublish" class="oe_stat_button"  groups="base.group_system" icon="fa-bolt" context="{'publish': 'both'}" attrs="{'invisible': ['|',('is_oracle_template_exported_oracle','=',False),('product_published_defined','=','published_global')]}">-->
<!--                           <div class="o_stat_info o_form_field">-->
<!--								<span class="o_warning_text">Publish in Online</span>-->
<!--								<span class="o_stat_text">Store and POS</span>-->
<!--							</div>-->

<!--                        </button>-->
<!--                        <button type="object" name="oracle_product_publish_unpublish" class="oe_stat_button"  groups="base.group_system" icon="fa-paperclip" context="{'publish': 'online'}"  attrs="{'invisible': ['|',('is_oracle_template_exported_oracle','=',False),('product_published_defined','=','published_web')]}">-->
<!--                            <div class="o_stat_info o_form_field">-->
<!--								<span class="o_warning_text">Publish in Online</span>-->
<!--								<span class="o_stat_text">Store Only</span>-->
<!--							</div>-->

<!--                        </button>-->

<!--                    </div>-->
                    <div class="oe_title" style="width: 390px;">
                        <label class="oe_edit_only" for="name" string="Title"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information">
                            <group>
                                <group>
                                    <field name="multi_ecommerce_connector_id" attrs="{'readonly': [('is_oracle_template_exported_oracle','=',True)]}"/>
                                    <field name="odoo_product_tmpl_id" required="1" readonly="1"/>
                                    <field name="odoo_product_category_id"/>
<!--                                    <field name="default_code"/>-->
                                    <field name="synchronizationId" readonly="1"/>
                                    <field name="last_time_template_update" readonly="1"/>
                                    <field name="product_published_defined" readonly="1"/>
                                    <field name="is_oracle_template_exported_oracle" widget="boolean_toggle" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="setu_oracle_product_template_main_action" model="ir.actions.act_window">
        <field name="name">Oracle Templates</field>
        <field name="res_model">setu.oracle.product.template</field>
        <field name="view_id" ref="setu_oracle_product_template_tree_view"/>
    </record>

    <record id="setu_multi_ecommerce_connector_template_action_for_oracle"  model="ir.actions.act_window">
        <field name="name">Oracle Templates</field>
        <field name="res_model">setu.oracle.product.template</field>
        <field name="view_id" ref="setu_oracle_product_template_tree_view"/>
        <field name="domain">[('multi_ecommerce_connector_id','=',active_id)]</field>
    </record>

    <menuitem id="setu_oracle_product_template_main_menu" name="Oracle Template" parent='setu_oracle_connector.setu_oracle_product_main_menu' action="setu_oracle_product_template_main_action"  sequence="1"/>


</odoo>
