<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="warehouse_authorisation_view" model="ir.ui.view">
            <field name="name">Warehouse Authorization</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Authorizaton">
                        <field name="warehouse_authorization_ids" nolabel="1">
                            <list editable="bottom">
                                <field name="user_id"/>
                                <field name="location_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            </list>
                            <form>
                                <group name="warehouse_authorization_ids">
                                    <field name="user_id"/>
                                    <field name="location_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>