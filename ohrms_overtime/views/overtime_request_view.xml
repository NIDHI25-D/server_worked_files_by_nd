<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="seq_overtime_req" model="ir.sequence">
            <field name="name">Overtime Sequencer</field>
            <field name="code">hr.overtime</field>
            <field name="prefix">OVT-</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field name="padding">5</field>
        </record>
    </data>
    <data>
        <!-- Views -->
        <!-- Form View -->
        <record id="hr_overtime_form_view" model="ir.ui.view">
            <field name="name">Time In Lieu</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <form string="Overtime Request">
                    <header>
                        <field name="state" widget="statusbar"
                               statusbar_visible="f_approve,approved,done"/>
                        <field name="user_status" invisible="1"/>
                        <button name="submit_to_f" string="Submit To Finance"
                                type="object" class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button name="approve" string="Approve" type="object"
                                class="btn-primary"
                                invisible="state not in ['f_approve'] or user_status != 'pending'"
                                groups="ohrms_overtime.allow_to_be_approver_director"/>
                        <button name="reject" string="Refuse" type="object"
                                class="btn-primary"
                                invisible="state not in ['f_approve'] or current_user_boolean == True"
                                groups="ohrms_overtime.allow_to_be_approver_director"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="0"
                                       placeholder="Reference ...."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name='employee_id'
                                       options="{'no_quick_create': True, 'no_create_edit' : True}"
                                       readonly="state != 'draft'"/>
                                <field name='department_id'/>
                                <field name='job_id'/>
                                <field name='manager_id'/>
                                <field name="duration_type" readonly="state != 'draft'"/>
                                <field name="current_approver_id" readonly="1"
                                       invisible="state in ['approved']"/>
                                <field name="current_user_boolean" invisible="1"/>
                            </group>
                            <group>
                                <field name='current_user' invisible="1"/>
                                <field name="contract_id"/>
                                <field name='attchd_copy' filename="attchd_copy_name"
                                       readonly="state != 'draft'"/>
                                <field name='type' readonly="state != 'draft'"/>
                                <field name='overtime_type_id' groups="hr.group_hr_user"
                                       required="state == 'draft'" readonly="state != 'draft'"
                                       context="{'default_employee_id':employee_id,'default_model':'hr_overtime'}"/>
                                <field name="cash_hrs_amount" force_save="1"
                                       invisible="state == 'draft' or type != 'cash' or duration_type != 'hours'"/>
                                <field name="cash_day_amount" force_save="1"
                                       invisible="state == 'draft' or type != 'cash' or duration_type != 'days'"/>
                                <field name="attchd_copy_name" invisible="1"/>
                                <field name="leave_id"
                                       invisible="not leave_id" readonly="state != 'draft'" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="date_from" required="1"
                                       class="oe_inline"
                                       readonly="state != 'draft'"/>
                                <field name="date_to" required="1"
                                       class="oe_inline"
                                       readonly="state != 'draft'"/>
                                <field name="days_no_tmp" string="Hours"
                                       invisible="duration_type == 'days'"  widget="float_time"/>
                                <field name="days_no_tmp" string="Days"
                                       invisible="duration_type == 'hours'" />
                                <field name="payslip_paid" readonly="1" invisible="type != 'cash'"
                                       widget="toggle_button" groups="hr.group_hr_manager"/>
                                <field name="days_no" readonly="1"
                                       invisible="1"/>
                            </group>
                            <group>
                                <div>
                                    <separator string="Public Holiday"/>
                                    <field name="public_holiday"
                                           force_save="1"/>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Work Description" name="work_description">
                                <field name="desc"
                                       readonly="state != 'draft'"/>
                            </page>
                            <page string="Attendance">
                                <field name="attendance_ids" readonly="1"/>
                            </page>
                            <page string="Work Schedule">
                                <field name="work_schedule" readonly="1"/>
                            </page>
                            <page string="Global Leaves">
                                <field name="global_leaves"/>
                            </page>
                            <page string="Approver(s)">
                                <field name="overtime_approver_ids" readonly="1" force_save="1">
                                    <list decoration-success="status=='approved'" decoration-warning="status=='pending'"
                                          decoration-danger="status=='refused'">
                                        <field name="related_approval_id" string="Approver" readonly="1"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="hr_overtime_tree_view" model="ir.ui.view">
            <field name="name">Overtime</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <list string="Overtime Request">
                    <field name="employee_id"/>
                    <field name="project_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="days_no_tmp" widget="float_time"/>
                    <field name="state"/>
                    <field name="type" invisible="1"/>
                    <field name="payslip_paid" groups="hr.group_hr_manager" readonly="1"
                           invisible="type != 'cash'" widget="toggle_button"/>
                </list>
            </field>
        </record>

        <!-- Actions -->
        <!-- overtime -->
        <record id="hr_select_overtime_action" model="ir.actions.act_window">
            <field name="name">Overtime Request</field>
            <field name="res_model">hr.overtime</field>
            <field name="view_mode">list,form</field>
            <field name="domain">['&amp;',('current_approver_id','=',uid),('state','=','f_approve')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create new Pre Approval Overtime Request.
                </p>
            </field>
        </record>

        <record id="hr_overtime_action" model="ir.actions.act_window">
            <field name="name">Overtime Request</field>
            <field name="res_model">hr.overtime</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create new Pre Approval Overtime Request.
                </p>
            </field>
        </record>

        <record id="hr_my_requests_overtime_action" model="ir.actions.act_window">
            <field name="name">Overtime Request</field>
            <field name="res_model">hr.overtime</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('employee_id.user_id','=',uid)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create new Pre Approval Overtime Request.
                </p>
            </field>
        </record>


        <!-- MenuItems -->
        <menuitem id="overtime_submenu"
                  name="Overtime Request"
                  web_icon="ohrms_overtime,static/description/overtime_icon.png"
                  groups="ohrms_overtime.allow_overtime_module"/>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="my_overtime_approvals"
                  name="Overtime Requests"
                  parent="overtime_submenu"
                  sequence="1"/>

        <menuitem id="my_requests" name="My Requests"
                  parent="my_overtime_approvals"
                  action="hr_my_requests_overtime_action"
                  groups="base.group_user"
                  sequence="2"
        />

        <menuitem id="overtime" name="Requests to Review"
                  parent="my_overtime_approvals"
                  action="hr_select_overtime_action"
                  groups="ohrms_overtime.allow_to_all_overtime_approver"
                  sequence="3"
        />

        <menuitem id="overtime_approvals_to_review" name="All Requests"
                  parent="overtime_submenu"
                  action="hr_overtime_action"
                  groups="ohrms_overtime.allow_to_all_overtime_approver"
                  sequence="4"
        />

    </data>
</odoo>
