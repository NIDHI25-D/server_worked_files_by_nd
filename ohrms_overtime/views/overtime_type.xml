<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_overtime_type_form_view" model="ir.ui.view">
            <field name="name">Overtime Type</field>
            <field name="model">overtime.type</field>
            <field name="arch" type="xml">
                <form string="Overtime Type">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="0" placeholder="Reference ...."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                            </group>
                            <group>
                                <field name="duration_type"/>
                                <field name="leave_compute" invisible="1"/>
                            </group>
                            <group>
                                <field name="leave_type" invisible="type != 'leave'"/>
                            </group>
                            <group>
                                <field name="overtime_type"/>
                                <field name="department_id" required="1" options="{'no_open': True,'no_create': True}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Approver(s)" name="approval">
                                <field name="related_approval_ids">
                                    <list string="Approval" editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="related_approval_id" domain="[('share','=',False)]"
                                               options="{'no_create': True}"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Rules" name="cash_rules" invisible="type != 'cash'">
                                <field name="rule_line_ids">
                                    <list string="Rules" editable="bottom">
                                        <field name="name"/>
                                        <field name="from_hrs"/>
                                        <field name="to_hrs"/>
                                        <field name="hrs_amount"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_overtime_type_tree_view" model="ir.ui.view">
            <field name="name">Overtime Type</field>
            <field name="model">overtime.type</field>
            <field name="arch" type="xml">
                <list string="Overtime Type">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="hr_overtime_type_action" model="ir.actions.act_window">
            <field name="name">Overtime Types</field>
            <field name="res_model">overtime.type</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create new Approval Type.
                </p>
            </field>
        </record>

        <!-- MenuItems -->
        <menuitem id="overtime_type_submenu"
                  name="Overtime Types"
                  parent="ohrms_overtime.overtime_submenu"
                  groups="hr_holidays.group_hr_holidays_user"
                  action="hr_overtime_type_action"/>

    </data>
</odoo>
