<odoo>
  <data>
    <record id="sale_order_view_search_inherit_need_to_verified_orders" model="ir.ui.view">
       <field name="name">sale.order.view.search.inherit.need.to.verified.orders</field>
       <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                <filter string="Website order need to be review" name="website_order_need_to_be_review" domain="[('need_to_review_website_order','=',True)]"/>
            </xpath>
       </field>
    </record>

      <record id="action_remove_need_to_review_website_orders" model="ir.actions.server">
            <field name="name">Remove From need to review website order</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="code">action = records.remove_from_need_to_review()</field>
        </record>

  </data>
</odoo>