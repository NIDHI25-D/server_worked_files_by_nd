        <template id="auth_signup_fields_inherited" inherit_id="auth_signup.fields">
            <xpath expr="//input[@name='login']" position="attributes">
                <attribute name="type">email</attribute>
                <attribute name="pattern">[^@\s]+@[^@\s]+\.[^@\s]+</attribute>
                <attribute name="title">Invalid Email Address,Email format must be (format: xxx@xxx.xxx)</attribute>
            </xpath>
        </template>

