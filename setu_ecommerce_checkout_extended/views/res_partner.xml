<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.setu_ecommerce_checkout_extended</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page name="contact_permissions" string="Contacts Permissions">
                    <group class="col-12">
                        <field name="is_consume_loyalty_points"/>
                        <field name="is_budgets_permission"/>
                        <field name="is_sale_orders_permission"/>
                        <field name="is_purchase_permission"/>
                        <field name="is_invoices_permission"/>
                        <field name="is_claims_permission"/>
                        <field name="is_required_invoice"/>
                        <field name="fiscal_position_id" readonly="1"/>
                        <field name="setu_company_type" widget="radio" options="{'horizontal': true}"/>
                    </group>
                </page>
            </xpath>
             <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="res_partner_view_form_inherit_view_mx_partner_address_form" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.view.mx.partner.address.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_mx_edi_extended.mx_partner_address_form"/>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
              <xpath expr="//field[@name='street_name']" position="attributes">
                    <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//field[@name='country_id']" position="attributes">
                    <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="res_partner_view_form_inherit_mail_for_email" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.mail.for.email</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="mail.res_partner_view_form_inherit_mail"/>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>