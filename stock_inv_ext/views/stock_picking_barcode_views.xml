<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="stock_move_lines_barcodes_form_views_inherited" model="ir.ui.view">
            <field name="name">stock.move.lines.barcodes.form.views.inherited</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock_barcode.stock_move_line_product_selector"/>
            <field name="arch" type="xml">

                <xpath expr="//form/div[5]" position="after">
                    <div class="row">
                        <div class="col-12 col-md-6 my-2 d-flex align-items-baseline">
                            <i class="fa fa-fw fa-lg fa-user-o text-center mr-3" title="Responsible"/>
                            <field name="responsible_person" placeholder="Responsible person" required="True"/>
                        </div>
                    </div>
                </xpath>

                <xpath expr="//div[@name='owner']" position="attributes">
                    <attribute name="groups">stock_inv_ext.group_barcode_owner_access</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
