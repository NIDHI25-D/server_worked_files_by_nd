<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="add_field_date_custom_number" model="ir.ui.view">
        <field name="name">add.field.date.custom.number</field>
        <field name="model">stock.landed.cost</field>
        <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vendor_bill_id']" position="after">
                <field name="date_custom_numbers" readonly="state != 'draft'"/>
                <field name="related_purchase_orders" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="view_pivot" model="ir.ui.view">
        <field name="name">Pivot View LandedCost</field>
        <field name="model">stock.landed.cost</field>
        <field name="arch" type="xml">
            <pivot>
            </pivot>
        </field>
    </record>

    <record id="stock_landed_costs.action_stock_landed_cost" model="ir.actions.act_window">
        <field name="view_mode">list,form,kanban,pivot</field>
    </record>

</odoo>
