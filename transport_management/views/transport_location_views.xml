<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="transport_location_form_view" model="ir.ui.view">
        <field name="name">transport.location.form.view</field>
        <field name="model">transport.location</field>
        <field name="arch" type="xml">
            <form string="Location">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Location"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State"
                                       options="{'no_open': True, 'no_quick_create': True}"
                                       context="{'default_country_id': country_id}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"
                                       options='{"no_open": True, "no_create": True}'/>
                            </div>
                        </group>
                        <group>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="email" widget="email"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="transport_location_tree_view" model="ir.ui.view">
        <field name="name">transport.location.tree.view</field>
        <field name="model">transport.location</field>
        <field name="arch" type="xml">
            <list string="Locations">
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="transport_location_action" model="ir.actions.act_window">
        <field name="name">Transport Locations</field>
        <field name="res_model">transport.location</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>