<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="setu_pos_extended.ControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath expr="//t[@t-if='props.showRemainingButtons']/div/OrderlineNoteButton" position="after">
            <button t-if="pos.config.enable_sale_team"
                t-att-class="buttonClass"
                t-on-click="() => this.selectSalesTeam()">
                <i class="fa fa-users me-1"/><t t-out="this.state.currentSalesTeam"/>
            </button>
        </xpath>
    </t>
</templates>
