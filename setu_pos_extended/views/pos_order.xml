<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="add_user_id_to_pos_order_from" model="ir.ui.view">
            <field name="name">add.user_id.to.pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="pos_hr.pos_order_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee_id']" position="before">
                    <field name="sales_team_id" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="search_view_discount_pos_order" model="ir.ui.view">
            <field name="name">search.view.discount.info.pos.order</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='invoiced']" position="before">
                    <filter string="Has Discount" name="has_discount" domain="[('has_discount','=',True)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>