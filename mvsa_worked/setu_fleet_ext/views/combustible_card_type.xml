<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="combustible_card_type_list_view" model="ir.ui.view">
        <field name="name">combustible.card.type.list</field>
        <field name="model">combustible.card.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="combustible_card_type_form_view" model="ir.ui.view">
        <field name="name">combustible.card.type.form</field>
        <field name="model">combustible.card.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="combustible_card_type_action" model="ir.actions.act_window">
        <field name="name">Combustible Card Type</field>
        <field name="res_model">combustible.card.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="combustible_configuration" parent="fleet.fleet_configuration" name="Combustible" groups="fleet.fleet_group_manager"/>
    <menuitem id="menu_combustible_card_type" name="Combustible Card Type" action="combustible_card_type_action"
              parent="combustible_configuration" sequence="11"/>
</odoo>