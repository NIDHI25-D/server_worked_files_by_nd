<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="network_card_mac_address_view_tree" model="ir.ui.view">
            <field name="name">network_card_mac_address_view_tree</field>
            <field name="model">network.card.mac.address</field>
            <field name="arch" type="xml">
                <list string="network_card_mac_address" editable="bottom">
                    <field name="name" required="1"/>
                </list>
            </field>
        </record>

        <record id="network_card_mac_address_action" model="ir.actions.act_window">
            <field name="name">Network Card Mac Address</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">network.card.mac.address</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="network_card_mac_address_view_tree"/>
        </record>
    </data>
</odoo>