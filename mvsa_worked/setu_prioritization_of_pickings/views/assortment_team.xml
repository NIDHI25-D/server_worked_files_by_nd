<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="assortment_team_tree_view" model="ir.ui.view">
            <field name="name">assortment.team.tree.view</field>
            <field name="model">assortment.team</field>
            <field name="arch" type="xml">
                <list string="Assortment Team">
                    <field name="assortment_team_priority"/>
                    <field name="name"/>
                    <field name="responsible_id"/>
                    <field name="members_ids" widget="many2many_tags"/>
                    <field name="suggested_complex_id"/>
                    <field name="warehouse_id"/>
                    <field name="warehouse_team_type_id"/>
                    <field name="available"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="assortment_team_form_view" model="ir.ui.view">
            <field name="name">assortment.team.form.view</field>
            <field name="model">assortment.team</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="warehouse_id"/>
                                <field name="warehouse_team_type_id"/>
                                <field name="responsible_id" options="{'no_create': True}"/>
                                <field name="members_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                <field name="suggested_complex_id"/>
                                <field name="available"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_assortment_team" model="ir.actions.act_window">
            <field name="name">Assortment Team</field>
            <field name="res_model">assortment.team</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_assortment_team"
                  name="Assortment"
                  parent="setu_prioritization_of_pickings_menu"
                  sequence="3"/>

        <menuitem id="sub_menu_assortment_team"
                  name="Assortment team"
                  parent="setu_prioritization_of_pickings.menu_assortment_team"
                  action="action_assortment_team"
                  sequence="1"/>

    </data>
</odoo>