<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Kanban view-->
    <record id="stock_move_view_kanban" model="ir.ui.view">
        <field name="name">stock.move.kanban2</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" quick_create="false">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-8">
                                    <strong>
                                        <span>
                                            <field name="product_id"/>
                                        </span>
                                    </strong>
                                </div>
                                <div class="col-4">
                                    <span class="float-right text-right">
                                        <field name="state" widget="label_selection" readonly="1" options="{'classes': {'draft': 'default', 'cancel': 'danger',
                                            'assigned': 'success', 'confirmed': 'default'}}"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                    <strong>
                                        <span>
                                            <field name="priority" widget="priority"/>
                                        </span>
                                    </strong>
                                </div>
                                <div class="col-8">
                                    <span class="float-right">
                                        <i class="fa fa-clock-o" role="img" aria-label="Date" title="Date"/>
                                        <field name="date"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--  This action is for incoming products  -->
    <record id="action_receipt_picking_move" model="ir.actions.act_window">
        <field name="name">Incoming Products</field>
        <field name="res_model">stock.move</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain"
               eval="[('picking_id.picking_type_id.code','=','incoming'), ('location_id.usage','!=','internal'), ('location_dest_id.usage', '=', 'internal')]"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('stock.view_move_tree_receipt_picking')}),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('stock_move_view_kanban')})]"/>
        <field name="context">{'product_receive': True, 'search_default_future': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register a product receipt
            </p>
            <p>
                Here you can receive individual products, no matter what
                purchase order or picking order they come from. You will find
                the list of all products you are waiting for.
            </p>
            <p>
                Once you receive an order, you can filter based on the name of
                the vendor or the purchase order reference. Then you can confirm
                all products received using the buttons on the right of each line.
            </p>
        </field>
    </record>

    <!-- Incoming Products -->
    <menuitem id="menu_action_picking_tree_in_move" action="action_receipt_picking_move" parent="sale.product_menu_catalog" name="Productos a recibir" sequence="4"/>

    <!-- https://app.clickup.com/t/86dqmg61g-->
    <record id="add_field_reserve_used_qty_stock_picking" model="ir.ui.view">
        <field name="name">add_field_reserve_used_qty_stock_picking</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='owner_id']" position="before">
                <field name="is_oversized" optional="show" force_save="1"/>
            </xpath>
        </field>
    </record>

</odoo>