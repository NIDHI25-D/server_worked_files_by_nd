<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_form_price_list_inherit" model="ir.ui.view">
        <field name="name">form product price list credit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="is_credit"/>
                <field name="payment_term_for_priceslist_id"/>
            </field>
        </field>
    </record>

    <record id="view_tree_price_list_inherit" model="ir.ui.view">
        <field name="name">tree product price list credit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view_tree"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="is_credit"/>
            </field>
        </field>
    </record>

</odoo>