<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="acquirer_form_mercadopago" model="ir.ui.view">
            <field name="name">acquirer.form.mercadopago</field>
            <field name="model">payment.provider</field>
            <field name="inherit_id" ref="payment.payment_provider_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="provider_credentials"]' position='inside'>
                    <group invisible ="code != 'mercado_pago'">
                        <field name="mercadopago_public_key" required="code == 'mercado_pago' and  state != 'disabled'"
                               />
                    </group>
                </xpath>
            </field>
        </record>

        <record id="transaction_form_mercadopago" model="ir.ui.view">
            <field name="name">acquirer.transaction.form.mercadopago</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.payment_transaction_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='provider_reference']" position="after">
                    <field name="mercadopago_txn_provider" invisible="1"/>
                    <field name="mercadopago_payment_id" invisible="mercadopago_txn_provider != 'mercado_pago'"/>
<!--                    <field name="mercadopago_txn_type" invisible="mercadopago_txn_provider != 'mercado_pago'"/>-->
                    <field name="date" invisible="mercadopago_txn_provider != 'mercado_pago'"/>
                </xpath>
                <xpath expr="//field[@name='amount']" position="after">
                       <field name="fees" invisible="fees == 0.0"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
