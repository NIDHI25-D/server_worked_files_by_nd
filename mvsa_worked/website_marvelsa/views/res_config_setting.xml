<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="res_config_settings_view_for_deleting_sale_orders_from_abondends_carts" model="ir.ui.view">
            <field name="name">res.config.settings.view.for.deleting.sale.orders.from.abondends.carts</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//setting[@id='proforma_configuration']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" id="proforma_configuration">
                        <div class="o_setting_right_pane">
                            <label for="abondend_cart_deleting_days"/>
                            <field name="abondend_cart_deleting_days"/>
                            <div class="text-muted">
                                Allows to configure days for deleting sale orders from abondends carts.
                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>
    </data>
</odoo>