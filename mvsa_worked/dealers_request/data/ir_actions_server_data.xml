<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="ir_actions_server_dealer_to_approve" model="ir.actions.server" forcecreate="0">
            <field name="name">(Dealer)To Approve</field>
            <field name="model_id" ref="documents.model_documents_document"/>
            <field name="groups_id" eval="[Command.link(ref('base.group_user'))]"/>
            <field name="sequence">1</field>
            <field name="state">object_write</field>
            <field name="update_m2m_operation">set</field>
            <field name="update_path">tag_ids</field>
            <field name="resource_ref" ref="dealers_request.documents_dealer_status_to_validate"/>
        </record>

         <record id="ir_actions_server_dealer_approved" model="ir.actions.server" forcecreate="0">
            <field name="name">(Dealer)Approved</field>
            <field name="model_id" ref="documents.model_documents_document"/>
            <field name="groups_id" eval="[Command.link(ref('base.group_user'))]"/>
            <field name="sequence">1</field>
            <field name="state">object_write</field>
            <field name="update_m2m_operation">set</field>
            <field name="update_path">tag_ids</field>
            <field name="resource_ref" ref="dealers_request.documents_dealer_status_validate"/>
        </record>

        <record id="ir_actions_server_dealer_rejected" model="ir.actions.server" forcecreate="0">
            <field name="name">(Dealer)Rejected</field>
            <field name="model_id" ref="documents.model_documents_document"/>
            <field name="groups_id" eval="[Command.link(ref('base.group_user'))]"/>
            <field name="sequence">1</field>
            <field name="state">object_write</field>
            <field name="update_m2m_operation">set</field>
            <field name="update_path">tag_ids</field>
            <field name="resource_ref" ref="dealers_request.documents_dealer_status_reject"/>
        </record>

        <function model="documents.document" name="action_folder_embed_action"
        eval="[
            ref('dealers_request.documents_dealer_folder'),
            ref('dealers_request.ir_actions_server_dealer_approved'),
        ]"/>
    </data>
</odoo>