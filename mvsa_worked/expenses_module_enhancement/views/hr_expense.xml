<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="add_field_partner_id_in_hr_expense" model="ir.ui.view">
            <field name="name">add.field.partner.id.in.hr.expense</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="partner_id" />
                </xpath>
                <!-- Xml button in header-->
                <xpath expr="//header" position="inside">
                    <button name="upload_xml_file" string="Upload XML File" class="oe_highlight" type="object" attrs="{'invisible': [('state', 'not in', 'draft')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>