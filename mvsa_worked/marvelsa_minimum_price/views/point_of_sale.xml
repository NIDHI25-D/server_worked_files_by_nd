<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- enable_disable_minimum_price field for enable disable minimum price in pos_config -->
	<record id="enable_disable_minimum_price_module" model="ir.ui.view">
	    <field name="name">enable.disable.minimum.price.module</field>
	    <field name="model">pos.config</field>
	    <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
	    <field name="arch" type="xml">
	        <xpath expr="//setting[@id='other_devices']" position="after">
				<div class="col-12 col-lg-6 o_setting_box price_control">
                    <div class="o_setting_left_pane">
                        <field name="enable_disable_minimum_price"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_disable_minimum_price" string="Enable Minimum Price"/>
                        <div class="text-muted">
                            For Enable or disable the minimum price of the product.
                        </div>
                    </div>
                </div>
	        </xpath>
	    </field>
	</record>
</odoo>
