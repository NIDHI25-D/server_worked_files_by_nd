<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ProductStockField" owl="1">
        <div>
            <a role="button" tabindex="0" class="js_product_warehouse"
               t-on-click.stop="(ev) => this.onInfoClick(ev)">
                <i class="fa fa-exclamation-circle"/></a>
        </div>
    </t>

    <t t-name="ProductWarehousePopOver" owl="1">
        <div class="account_payment_popover">
            <h3 t-if="props.title" class="o_popover_header"><t t-esc="this.props.title"/></h3>
            <table class="table table-bordered" style="width:500px;">
                <thead>
                    <th style="text-align:center">Warehouse Name</th>
                    <th style="text-align:center">On Hand</th>
                    <th style="text-align:center">Available</th>
                    <th style="text-align:center">Outgoing</th>
                    <th style="text-align:center">Incoming</th>
                    <th style="text-align:center">Virtual</th>
                </thead>
                <tbody>
                    <t t-debug="pdb"/>
                <t t-foreach="this.props.line.content" t-as="warehouse" t-key="warehouse_index">
                <tr>
                    <td>
                        <span t-esc="warehouse.warehouse"/>
                    </td>
                    <td>
                        <span t-esc="warehouse.qty_available"/>
                    </td>
                    <td>
                        <span t-esc="warehouse.free_qty"/>
                    </td>
                    <td>
                        <span t-esc="warehouse.outgoing_qty"/>
                    </td>
                    <td>
                        <span t-esc="warehouse.incoming_qty"/>
                    </td>
                    <td>
                        <span t-esc="warehouse.virtual_available"/>
                    </td>
                </tr>
            </t>
                </tbody>
            </table>

            </div>
    </t>

</templates>