<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="add_carrier_page_shipping_method" model="ir.ui.view">
            <field name="name">add_carrier_page_shipping_method</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='description']" position="after">
                    <page name="carriers" string="Carriers">
                        <group>
                            <group name="carrier">
                                <field name="shipping_carrier_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//div[@name='free_over_amount']" position="after">
                    <field name="is_display_carrier_on_website"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
