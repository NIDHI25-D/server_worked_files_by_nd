<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_pricelist_extended_for_mail_activity" model="ir.ui.view">
            <field name="name">product.pricelist.extended.for.mail.activity</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="website_sale.website_sale_pricelist_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='pricelist_config']/group[@name='pricelist_website']" position="inside">
                    <field name="send_mail_activity"/>
                    <field name="send_mail_activity_msg" invisible="send_mail_activity != True"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>