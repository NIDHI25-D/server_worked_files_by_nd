<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="account_bank_statement_line_extended" model="ir.ui.view">
        <field name="name">account.bank.statement.line.extended</field>
        <field name="model">account.bank.statement.line</field>
        <field name="inherit_id" ref="account_accountant.view_bank_statement_line_tree_bank_rec_widget"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='statement_id']" position="after">
                <button name="open_wizard_to_associate_invoices" type="object" class="oe_link"
                        string="Associate Invoices"/>
                <field name="difference_of_invoices_with_statement_line"/>
            </xpath>
        </field>
    </record>


    <record id="bank_statement_line_form_view" model="ir.ui.view">
        <field name="name">associate.pos.invoice.wizard</field>
        <field name="model">account.bank.statement.line</field>
        <field name="arch" type="xml">
            <form string="Pos invoices">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" readonly="1"/>
                            <field name="payment_ref" readonly="1"/>
                            <field name="amount" readonly="1"/>
                        </group>
                        <group>
                            <field name="l10n_mx_edi_payment_method_id" readonly="1"/>
                            <field name="difference_of_invoices_with_statement_line" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Pos Invoices" name="invoice_ids">
                            <field name="associate_invoice_ids">
                                <list editable="bottom">
                                    <field name="invoice_id" required="1"/>
                                    <field name="signed_amount" readonly="0"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>