<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_form_view_inherited" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="is_urgent_order" readonly="0" groups="setu_urgent_order_enhancement.group_urgent_order"/>
                <field name="is_urgent_order" readonly="1" groups="!setu_urgent_order_enhancement.group_urgent_order"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_tree_view_inherited" model="ir.ui.view">
        <field name="name">sale.order.tree.view.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="is_urgent_order" readonly="0" groups="setu_urgent_order_enhancement.group_urgent_order"/>
                <field name="is_urgent_order" readonly="1" groups="!setu_urgent_order_enhancement.group_urgent_order"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="invisible">False</attribute>
            </xpath>
        </field>
    </record>
</odoo>
