<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!--    Inherit product.brand view-->
    <record id="view_country_brand_form_inherit" model="ir.ui.view">
        <field name="name">view_country_brand_form_inherit</field>
        <field name="model">product.brand</field>
        <field name="inherit_id" ref="product_brand.view_product_brand_form"/>
        <field name="arch" type="xml">
            <xpath expr="///field[@name='partner_id']" position="after">
                <field name="enable_exclude_products" invisible="0"/>
                <field name="country_ids"
                       required="enable_exclude_products != False"
                       invisible="enable_exclude_products == False"
                       widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

</odoo>
