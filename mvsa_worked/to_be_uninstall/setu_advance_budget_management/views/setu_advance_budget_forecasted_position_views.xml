<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="setu_advance_budget_forecasted_position_tree_view" model="ir.ui.view">
            <field name="name">setu.advance.budget.forecasted.position.tree.view</field>
            <field name="model">setu.advance.budget.forecasted.position</field>
            <field name="arch" type="xml">
                <tree string="Forecasted Position">
                    <field name="analytic_account_id"/>
                    <field name="account_id"/>
                    <field name="forecasted_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="amount_in_journal_items"/>
                    <field name="planned_amount"/>
                    <field name="difference_with_planned_amount_journal"/>
                    <field name="difference_with_planned_amount_journal_percentage"/>
                </tree>
            </field>
        </record>

        <record id="setu_advanced_budget_forecasted_position_view_form" model="ir.ui.view">
            <field name="name">setu_advanced_budget_forecasted_position_view_form</field>
            <field name="model">setu.advance.budget.forecasted.position</field>
            <field name="arch" type="xml">
                <form string="setu_advanced_budget_forecasted_position_form" edit="false" create="false ">
                    <sheet>
                        <group>
                            <group>
                                <field name="setu_advance_budget_forecasted_id"/>
                                <field name="setu_advance_budget_forecasted_sheet_id" readonly="1"/>
                                <field name="start_date" readonly="1"/>
                                <field name="end_date" readonly="1"/>
                                <field name="account_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="planned_amount"/>
                                <field name="amount_in_journal_items" readonly="1"/>
                                <field name="difference_with_planned_amount_journal" readonly="1"/>
                                <field name="difference_with_planned_amount_journal_percentage" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="setu_advance_budget_forecasted_position_action" model="ir.actions.act_window">
            <field name="name">Forecasted Position</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">setu.advance.budget.forecasted.position</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_account_id': 1,'search_default_analytic_account_id': 2}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <record id="setu_advance_budget_forecasted_position_action_open" model="ir.actions.act_window">
            <field name="name">Forecasted Position</field>
            <field name="res_model">setu.advance.budget.forecasted.position</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="view_id" eval="False"/>
            <field name="context">{'search_default_group_setu_advance_budget_forecasted_id': True,
                'search_default_filter_not_cancelled':True}
            </field>
        </record>

        <record id="setu_advance_budget_forecasted_position_action_open_for_specific_account_profit_and_loss_account" model="ir.actions.act_window">
            <field name="name">Budget Position</field>
            <field name="res_model">setu.advance.budget.forecasted.position</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Forecasted Position" id="setu_advance_budget_forecasted_position_menu"
                  parent="setu_advance_budget_forecasted_planing_main_menu"
                  action="setu_advance_budget_forecasted_position_action"/>

    </data>
</odoo>