<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data noupdate="1">
        <record id="attendance_report_weekly_cron" model="ir.cron">
            <field name="name">Weekly Attendance report cron</field>
            <field name="model_id" ref="model_hr_attendance_bi_report"/>
            <field name="state">code</field>
            <field name="code">model.get_weekly_attendance_report()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name='interval_number'>1</field>
            <field name='interval_type'>weeks</field>
            <field name="active">False</field>
        </record>

        <record id="attendance_report_daily_cron_to_hr_manager" model="ir.cron">
            <field name="name">Daily Attendance report for hr manger cron</field>
            <field name="model_id" ref="model_hr_attendance_bi_report"/>
            <field name="state">code</field>
            <field name="code">model.get_daily_attendance_report()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name='interval_number'>1</field>
            <field name='interval_type'>days</field>
            <field name="active">False</field>
        </record>

        <record id="attendance_report_by_employee_weekly_cron" model="ir.cron">
            <field name="name">Weekly Attendance report for employee cron</field>
            <field name="model_id" ref="model_hr_attendance_bi_report"/>
            <field name="state">code</field>
            <field name="code">model.get_weekly_attendance_by_employee_report()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name='interval_number'>1</field>
            <field name='interval_type'>weeks</field>
        </record>
    </data>
</odoo>
