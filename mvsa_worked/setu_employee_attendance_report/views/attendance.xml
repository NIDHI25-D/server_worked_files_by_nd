<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="setu_hr_public_holidays_tree" model="ir.ui.view">
        <field name="name">setu.hr.public.holidays.tree</field>
        <field name="model">setu.hr.public.holidays</field>
        <field name="arch" type="xml">
            <list string="Attendance">
                <field name="name"/>
                <field name="holiday_start_date"/>
                <!--                <field name="holiday_hours"/>-->
                <field name="leave_type"/>
            </list>
        </field>
    </record>

    <record id="setu_hr_public_holidays_form" model="ir.ui.view">
        <field name="name">setu.hr.public.holidays.form</field>
        <field name="model">setu.hr.public.holidays</field>
        <field name="arch" type="xml">
            <form string="Attendance">
                <sheet>
                    <div>
                        <span class="o_form_label">Name</span>
                        <h1 class="mt0">
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Holidays Information">
                            <field name="holiday_start_date"/>
                            <!--                            <field name="holiday_hours"/>-->
                            <field name="leave_type" options="{'no_create': True, 'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="setu_hr_public_holidays_calendar" model="ir.ui.view">
        <field name="name">setu.hr.public.holidays.calendar</field>
        <field name="model">setu.hr.public.holidays</field>
        <field name="arch" type="xml">
            <calendar string="Holidays" date_start="holiday_start_date" date_stop="holiday_start_date" mode="month"
                      > <!-- remove quick_add="False" -->
                <field name="name"/>
            </calendar>
        </field>
    </record>

