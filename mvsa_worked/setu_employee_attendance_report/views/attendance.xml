    <record id="setu_hr_public_holidays_search" model="ir.ui.view">
        <field name="name">setu.hr.public.holidays.search</field>
        <field name="model">setu.hr.public.holidays</field>
        <field name="arch" type="xml">
            <search string="Search Attendance">
                <field name="holiday_start_date"/>
                <!--                <field name="holiday_hours"/>-->
                <field name="leave_type"/>
                <group expand="1" string="Group By">
                    <filter string="Leave Types" name="leave_type" context="{'group_by':'leave_type'}"/>
                    <filter string="Holiday Date" name="leave_date"
                            context="{'group_by':'holiday_start_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_attendance" model="ir.actions.act_window">
        <field name="name">Manage Holidays</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">setu.hr.public.holidays</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create holiday!
            </p>
        </field>
    </record>


    <menuitem id="setu_employee_attendance_report_root" parent="hr_attendance.menu_hr_attendance_view_attendances"
              name="Manage Holidays" sequence="3" action="action_attendance"/>

    <menuitem id="root_menu_hr_attendance_report" name="Reporting" parent="hr_attendance.menu_hr_attendance_root"
                  sequence="15" groups="hr_attendance.group_hr_attendance_officer"/>

    <menuitem id="hr_attendance.menu_hr_attendance_reporting"
              name="Reporting"
              action="hr_attendance.hr_attendance_reporting"
