<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="add_bill_type_information" model="ir.ui.view">
            <field name="name">add.bill.type.information</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[2]" position="after">
                    <group>
                        <separator string="Payment Terms"/>
                        <field name="purchase_payment_ids" widget="one2many_list">
                            <list editable="bottom" no_open="True">
                                <field name="bill_id" options="{'no_create_edit': True}"/>
                                <field name="date_type"/>
                                <field name="operation_type"/>
                                <field name="bill_reference"/>
                                <field name="is_vendor"/>
                                <field name="days_quantity"/>
                                <field name="is_create_bill_draft"/>
                            </list>
                        </field>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>