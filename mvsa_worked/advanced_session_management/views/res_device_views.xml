<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_device_view_form_inherit" model="ir.ui.view">
        <field name="name">res.device.form.inherit</field>
        <field name="model">res.device</field>
        <field name="inherit_id" ref="base.res_device_view_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//group/group[2]" position="inside">
                <field name="device_type"/>
            </xpath>
            <xpath expr="//group/group[2]" position="after">
                <group>
                    <field name="country"/>
                    <field name="city"/>
                </group>
            </xpath>
            <xpath expr="//group" position="after">
                <notebook> 
                    <page string='Activity Log'>
                        <field name="activity_log_ids"/>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
    <!-- is_current -->
    <record id="res_device_view_tree_inherit" model="ir.ui.view">
        <field name="name">res.device.list.inherit</field>
        <field name="model">res.device</field>
        <field name="inherit_id" ref="base.res_device_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="is_current" column_invisible="1"/>
                <button class="fa fa-fw o_button_icon fa-circle text-danger" name="dummy_btn" type='object' title='Offline' invisible="is_current == True"/>
                <button class="fa fa-fw o_button_icon fa-circle text-success" name="dummy_btn" type='object' title='Online' invisible="is_current == False"/>
            </xpath>
        </field>
    </record>
</odoo>
