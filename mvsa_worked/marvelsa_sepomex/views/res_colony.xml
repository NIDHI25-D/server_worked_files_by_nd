<odoo>
	<data>

		<record model="ir.ui.view" id="marvelsa_sepomex_colony_list">
			<field name="name">marvelsa_sepomex colony list</field>
			<field name="model">sepomex.res.colony</field>
			<field name="arch" type="xml">
				<list editable="bottom">
					<field name="name"/>
					<field name="postal_code"/>
					<field name="city_id"/>
				</list>
			</field>
		</record>
			
		<record id="view_sepomex_colony_form" model="ir.ui.view">
			<field name="name">marvelsa_sepomex colony form</field>
	        <field name="model">sepomex.res.colony</field>
	        <field name="arch" type="xml">
	            <form>
	                <group>
	                    <field name="name"/>
	                    <field name="postal_code"/>
	                    <field name="city_id"/>
	                </group>
	            </form>
	        </field>
    	</record>

			<!-- actions opening views on models -->
		<record id="marvelsa_sepomex_action_window" model="ir.actions.act_window">
	        <field name="name">SEPOMEX</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">sepomex.res.colony</field>
	        <field name="view_mode">list,form</field>
	        
    	</record>

		<menuitem name="SEPOMEX" id="marvelsa_sepomex_menu" parent="contacts.menu_localisation"
			action="marvelsa_sepomex_action_window" sequence="10"/>
 
	</data>

</odoo>