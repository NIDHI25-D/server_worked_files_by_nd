<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="monthly_proposal_res_config_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.monthly.proposal</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="website_email_marketing" position="after">
                <block title="Monthly Proposal" id="monthly_proposal_setting">
                    <setting
                            id="monthly_proposal_setting"
                            help="Monthly Proposal"
                    >
                        <div class="content-group">
                            <div class="row mt16">
                                <label class="o_light_label" string="Message" for="message_for_customer_in_monthly_proposal"/>
                                <field name="message_for_customer_in_monthly_proposal"/>
                            </div>
                            <div class="row mt16">
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <label string="Select user to send mail about monthly proposal" for="monthly_proposal_mail_user"/>
                                    <div class="text-muted">
                                    </div>
                                    <div class="mt16">
                                        <field name="monthly_proposal_mail_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </setting>
                </block>
            </block>
        </field>
    </record>
</odoo>
