        <template id="cart_load_more_in_suggested"
                  inherit_id="website_sale.cart"
                  name="monthly proposal message Cart">
            <xpath expr="//t[@t-call='website_sale.cart_lines']" position="before">
                <t t-set="message"
                       t-value="request.env['ir.default'].sudo()._get('res.config.settings','message_for_customer_in_monthly_proposal', company_id=request.env.company.id)"/>
                <div class="alert alert-warning" role="alert" id="monthly_proposal_message"
                     t-if="website_sale_order.is_monthly_proposal and message">
