<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">

        <!-- Error Email template  -->
        <record id="mail_template_to_notify_customer_for_proposal" model="mail.template">
            <field name="name">Send mail to customer for monthly proposal</field>
            <field name="subject">Proposal based on previous purchases</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="auto_delete" eval="False" />
            <field name="body_html">
                <![CDATA[
                Dear Customer,<br>
                <p>We have created one proposal base on your previous purchases please check your cart to
                get great discount !!!<br></p><br>
                Thank You.
                ]]>
            </field>
        </record>

        <record id="mail_template_to_notify_user_for_proposal" model="mail.template">
