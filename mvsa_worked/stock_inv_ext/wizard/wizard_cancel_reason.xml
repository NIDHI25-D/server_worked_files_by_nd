<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_wizard_cancel_reason_form" model="ir.ui.view">
        <field name="name">wizard.cancel.reason.form</field>
        <field name="model">wizard.cancel.reason</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="order_fill_error_picking_id"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" class="oe_highlight" name="confirm_cancel"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_wizard_cancel_reason" model="ir.actions.act_window">
        <field name="name">Cancel Reason</field>
        <field name="res_model">wizard.cancel.reason</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="stock_inv_ext.view_wizard_cancel_reason_form"/>
        <field name="target">new</field>
    </record>


</odoo>
