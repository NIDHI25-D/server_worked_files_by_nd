<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_delivery_document_extended" inherit_id="stock.report_picking">
            <xpath expr="//table[1]/thead/tr/th[4]" position="after">
                <th name="unspsc_code_id">
                    <strong>UNSPSC Product Category</strong>
                </th>
            </xpath>
            <xpath expr="//tr[@t-foreach='o.move_line_ids_without_package.sorted(lambda ml: (ml.location_id.complete_name, ml.location_dest_id.complete_name))']" position="replace">
                <t t-if="o.location_id.usage != 'internal'">
                    <t t-foreach="o.move_ids_without_package.sorted(key=lambda ml: ml.mapped('move_line_ids').mapped('location_dest_id.display_name'),reverse=True)"
                       t-as="move">
                        <t t-foreach="move.move_line_ids.sorted(key=lambda ml: ml.location_id.id,reverse=True)" t-as="ml">
                            <tr>
                                <td>
                                    <span t-field="ml.product_id.display_name"/>
                                    <br/>
                                    <span t-field="ml.product_id.description_picking"/>
                                </td>
                                <td>
                                    <span t-if="o.state != 'done'" t-field="ml.quantity"/>
                                    <span t-if="o.state == 'done'" t-field="ml.qty_done"/>
<!--                                     Task:- Remove unit of measure from picking-->
                                    <t t-if="o.picking_type_id == o.picking_type_id.warehouse_id.pick_type_id or o.picking_type_id.code == 'outgoing'">
                                        <span></span>
                                    </t>
                                    <t t-else="">
                                        <span t-field="ml.product_uom_id" groups="uom.group_uom">units</span>
                                    </t>
                                </td>
                                <td t-if="o.picking_type_id.code != 'incoming'"
                                    groups="stock.group_stock_multi_locations">
                                    <span t-esc="ml.location_id.display_name"/>
                                    <t t-if="ml.package_id">
                                        <span t-field="ml.package_id"/>
                                    </t>
                                </td>
                                <td t-if="o.picking_type_id.code != 'outgoing'"
                                    groups="stock.group_stock_multi_locations">
                                    <div>
                                        <span t-field="ml.location_dest_id"/>
                                        <t t-if="ml.result_package_id">
                                            <span t-field="ml.result_package_id"/>
                                        </t>
                                    </div>
                                </td>
                                <td name="unspsc_code_id_value">
                                    <span t-field="ml.product_id.unspsc_code_id"/>
                                </td>
                                <td class=" text-center h6" t-if="has_serial_number">
                                    <img t-if="has_serial_number and (ml.lot_id or ml.lot_name)"
                                         t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', ml.lot_id.name or ml.lot_name, 400, 100)"
                                         style="width:100%;height:35px;" alt="Barcode"/>
                                </td>
                                <td class="text-center" t-if="has_barcode">
                                    <t t-if="product_barcode != move.product_id.barcode">
                                        <span t-if="move.product_id and move.product_id.barcode">
                                            <img t-if="len(move.product_id.barcode) == 13"
                                                 t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('EAN13', move.product_id.barcode, 400, 100, 0)"
                                                 style="height:35px" alt="Barcode"/>
                                            <img t-elif="len(move.product_id.barcode) == 8"
                                                 t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('EAN8', move.product_id.barcode, 400, 100, 0)"
                                                 style="height:35px" alt="Barcode"/>
                                            <img t-else=""
                                                 t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('Code128', move.product_id.barcode, 400, 100, 0)"
                                                 style="height:35px" alt="Barcode"/>
                                        </span>
                                        <t t-set="product_barcode" t-value="move.product_id.barcode"/>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </t>
                </t>
                <t t-else="">
                    <t t-foreach="o.move_ids_without_package.sorted(key=lambda ml: ml.mapped('move_line_ids').mapped('location_id.display_name'),reverse=True)"
                       t-as="move">
                        <t t-foreach="move.move_line_ids.sorted(key=lambda ml: ml.location_id.id,reverse=True)" t-as="ml">
                            <tr>
                                <td>
                                    <span t-field="ml.product_id.display_name"/>
                                    <br/>
                                    <span t-field="ml.product_id.description_picking"/>
                                </td>
                                <td>
                                    <span t-if="o.state != 'done'" t-field="ml.quantity"/>
                                    <span t-if="o.state == 'done'" t-field="ml.qty_done"/>
<!--                                    Task:- Remove unit of measure from picking  -->
                                    <t t-if="o.picking_type_id == o.picking_type_id.warehouse_id.pick_type_id or o.picking_type_id.code == 'outgoing'">
                                        <span></span>
                                    </t>
                                    <t t-else="">
                                        <span t-field="ml.product_uom_id" groups="uom.group_uom">units</span>
                                    </t>
                                </td>
                                <td t-if="o.picking_type_id.code != 'incoming'"
                                    groups="stock.group_stock_multi_locations">
                                    <span t-esc="ml.location_id.display_name"/>
                                    <t t-if="ml.package_id">
                                        <span t-field="ml.package_id"/>
                                    </t>
                                </td>
                                <td t-if="o.picking_type_id.code != 'outgoing'"
                                    groups="stock.group_stock_multi_locations">
                                    <div>
                                        <span t-field="ml.location_dest_id"/>
                                        <t t-if="ml.result_package_id">
                                            <span t-field="ml.result_package_id"/>
                                        </t>
                                    </div>
                                </td>
                                <td name="unspsc_code_id_value">
                                    <span t-field="ml.product_id.unspsc_code_id"/>
                                </td>
                                <td class=" text-center h6" t-if="has_serial_number">
                                    <img t-if="has_serial_number and (ml.lot_id or ml.lot_name)"
                                         t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', ml.lot_id.name or ml.lot_name, 400, 100)"
                                         style="width:100%;height:35px;" alt="Barcode"/>
                                </td>
                                <td class="text-center" t-if="has_barcode">
                                    <t t-if="product_barcode != move.product_id.barcode">
                                        <span t-if="move.product_id and move.product_id.barcode">
                                            <img t-if="len(move.product_id.barcode) == 13"
                                                 t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('EAN13', move.product_id.barcode, 400, 100, 0)"
                                                 style="height:35px" alt="Barcode"/>
                                            <img t-elif="len(move.product_id.barcode) == 8"
                                                 t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('EAN8', move.product_id.barcode, 400, 100, 0)"
                                                 style="height:35px" alt="Barcode"/>
                                            <img t-else=""
                                                 t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;quiet=%s' % ('Code128', move.product_id.barcode, 400, 100, 0)"
                                                 style="height:35px" alt="Barcode"/>
                                        </span>
                                        <t t-set="product_barcode" t-value="move.product_id.barcode"/>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </t>
                </t>
            </xpath>
        </template>

    </data>
</odoo>