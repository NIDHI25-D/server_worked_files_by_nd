<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estafeta_shiipping_provider_details" model="ir.ui.view">
        <field name="name">delivery.carrier</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="Estafeta Configuration" name="estafeta_configuration"
                      invisible="delivery_type != 'estafeta_provider'">
                    <group>
                        <group name="package_information" string="Package Information">
                            <field name="company_id" required="delivery_type ==  'estafeta_provider'"/>
                            <field name="estafeta_provider_package_id"
                                   required="delivery_type ==  'estafeta_provider'"/>
                            <field name="estafeta_service_type_id"
                                   required="delivery_type ==  'estafeta_provider'"/>

                            <field name="estafeta_parcel_id"
                                   required="delivery_type ==  'estafeta_provider'"/>
                            <field name="estafeta_output_type"
                                   required="delivery_type ==  'estafeta_provider'"/>
                            <field name="estafeta_output_group"
                                   required="delivery_type ==  'estafeta_provider'"/>
                            <field name="estafeta_response_mode"
                                   required="delivery_type ==  'estafeta_provider'"/>
                            <field name="estafeta_printing_template"
                                   required="delivery_type ==  'estafeta_provider'"/>
                        </group>
                        <group name="pallet_information" string="Pallet Information">
                            <field name="estafeta_pallet_parcel_id" required="delivery_type ==  'estafeta_provider'"/>
                            <field name="estafeta_pallet_service_type_id"
                                   required="delivery_type ==  'estafeta_provider'"/>
                            <field name="productservicecode" required="delivery_type ==  'estafeta_provider'"/>
                            <field name="weightunitcode" required="delivery_type ==  'estafeta_provider'"/>
                            <field name="nav" required="delivery_type ==  'estafeta_provider'"/>
                            <field name="platform" required="delivery_type ==  'estafeta_provider'"/>
                            <field name="measurementunitcode" required="delivery_type ==  'estafeta_provider'"/>
                            <field name="costcenter" required="delivery_type ==  'estafeta_provider'"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>