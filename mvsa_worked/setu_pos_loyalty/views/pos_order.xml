<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_redeem_loyalty_points_info_pos_order" model="ir.ui.view">
        <field name="name">view.redeem.loyalty.points.info.pos.order</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra']/group/group[2]" position="after">
                <group string="Loyalty Program Information">
                    <field name="loyalty_points" readonly="1"/>
                    <field name="loyalty_points_redeemed" readonly="1"/>
                    <field name="points_before_order" readonly="1"/>
                    <field name="pp_order" readonly="1" invisible="1"/>
                    <field name="is_customer_blocked" readonly="1" invisible="1"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='lines']/list/field[@name='full_product_name']" position="after">
                <field name="is_product_blacklisted" readonly="1" invisible="1"/>
                <field name="points_per_currency" readonly="1" invisible="1"/>
                <field name="points_per_product" readonly="1" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="search_view_redeem_loyalty_points_info_pos_order" model="ir.ui.view">
        <field name="name">search.view.redeem.loyalty.points.info.pos.order</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='posted']" position="after">
                <filter string="Paid With POS Loyalty" name="paid_with_pos_loyalty"
                        domain="[('loyalty_points_redeemed','>',0),('state','in',['paid','done','invoiced'])]"/>
            </xpath>
        </field>
    </record>
</odoo>
