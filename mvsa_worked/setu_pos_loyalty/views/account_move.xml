<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_redeem_loyalty_points_account_move" model="ir.ui.view">
        <field name="name">redeem.loyalty.points.account.move</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="is_pos_invoice" invisible="1"/>
            </field>
            <xpath expr="//notebook/page[@name='other_info']" position="before">
                <page string="Loyalty Programs" name="loyalty_programs"
                      invisible="is_pos_invoice == False">
                    <group>
                        <group>
                            <field name="loyalty_points_earned" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
