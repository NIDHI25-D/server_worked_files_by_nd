<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="setu_multi_ecommerce_connector_tree_view" model="ir.ui.view">
        <field name="name">setu.multi.ecommerce.connector.tree.view.inherit</field>
        <field name="model">setu.multi.ecommerce.connector</field>
        <field name="inherit_id" ref="setu_ecommerce_based.setu_multi_ecommerce_connector_tree_view"/>
        <field name="arch" type="xml">
            <tree>
                <field name="oracle_connector_name"/>
            </tree>
        </field>
    </record>

    <record id="setu_multi_ecommerce_connector_from_view" model="ir.ui.view">
        <field name="name">setu.multi.ecommerce.connector.form.view.inherit</field>
        <field name="model">setu.multi.ecommerce.connector</field>
        <field name="inherit_id" ref="setu_ecommerce_based.setu_multi_ecommerce_connector_form_view"/>
        <field name="arch" type="xml">

            <!--            <xpath expr="//button[@name='cron_configuration_action']" position="attributes">-->
            <!--                <attribute name="attrs">{'invisible': [('ecommerce_connector', '=', 'oracle_connector')]}</attribute>-->
            <!--            </xpath>-->

            <xpath expr="//div[@name='common_general_setup_currency']" position="before">
                <div name="common_general_setup_partner" class="col-xs-12 col-md-6 o_setting_box"
                     attrs="{'invisible': [('ecommerce_connector', '!=', 'oracle_connector')]}">
                    <div class="o_setting_right_pane" style="margin-left: 35px;">
                        <label for="oracle_partner_id" string="Partner"/>
                        <div class="text-muted">
                            - Shows the name of the Partner
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="oracle_partner_id" class="o_light_label"
                                       options="{'no_create':True,'no_create_edit':True}"
                                       attrs="{'required':[('state', '=', 'draft'),('ecommerce_connector', '=', 'oracle_connector')],
                                                           'readonly':[('state','in',['fully_integrated','error'])]}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//page/div/div/div[@name='common_general_setup_currency']" position="attributes">
                <attribute name="attrs">{'invisible': [('ecommerce_connector', '=', 'oracle_connector')]}</attribute>
            </xpath>

            <xpath expr="//page/div/div/div[@name='common_general_setup_lang']" position="attributes">
                <attribute name="attrs">{'invisible': [('ecommerce_connector', '=', 'oracle_connector')]}</attribute>
            </xpath>

            <xpath expr="//page/div/div/div[@name='common_general_setup_warehouse']" position="attributes">
                <attribute name="attrs">{'invisible': [('ecommerce_connector', '=', 'oracle_connector')]}</attribute>
            </xpath>

            <xpath expr="//page/div/div/div/div/div/div/field[@name='odoo_warehouse_id']" position="attributes">
                <attribute name="attrs">{'required': [('ecommerce_connector', '!=', 'oracle_connector')]}</attribute>
            </xpath>

            <xpath expr="//page/div/div/div[@name='common_general_setup_company']" position="after">
                <div name="common_general_setup_stock" class="col-xs-12 col-md-6 o_setting_box"
                     attrs="{'invisible': [('ecommerce_connector', '!=', 'oracle_connector')]}">
                    <div class="o_setting_right_pane" style="margin-left: 35px;">
                        <label for="oracle_stock_pick_type" string="Default Stock Location"/>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="oracle_stock_pick_type" class="o_light_label"
                                       attrs="{'required': [('ecommerce_connector', '=', 'oracle_connector')], 'readonly': [('state', 'in', ['fully_integrated','integrated','error'])]}"/>
                            </div>
                        </div>
                    </div>
                    <div class="o_setting_right_pane" style="margin-left: 35px;">
                        <label for="stock_location_id" string="Stock Location"
                               attrs="{'invisible': [('oracle_stock_pick_type', 'in', ['all','several'])]}"/>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="stock_location_id"
                                       attrs="{'invisible': [('oracle_stock_pick_type','!=','specific')], 'required': [('oracle_stock_pick_type','=','specific')], 'readonly': [('state', 'in', ['fully_integrated','integrated','error'])]}"
                                       class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                    <div class="o_setting_right_pane" style="margin-left: 35px;">
                        <label for="stock_location_ids" string="Stock Locations"
                               attrs="{'invisible': [('oracle_stock_pick_type', 'in', ['all','specific'])]}"/>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="stock_location_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('oracle_stock_pick_type','!=','several')], 'required': [('oracle_stock_pick_type','=','several')], 'readonly': [('state', 'in', ['fully_integrated','integrated','error'])]}"
                                       class="o_light_label"/>
                            </div>
                        </div>
                    </div>

                    <div class="o_setting_right_pane" style="margin-left: 35px;">
                        <label for="stock_percentage" string="Stock Percentage To Consider"/>
                        <field name="stock_percentage" class="o_light_label"
                               attrs="{'readonly': [('state', 'in', ['fully_integrated','integrated','error'])]}"/>
                    </div>
                    <div class="o_setting_right_pane" style="margin-left: 35px;">
                        <label for="minimum_stock_quantities"
                               string="Minimum stock quantities to calculate the percentage"/>
                        <field name="minimum_stock_quantities" class="o_light_label"
                               attrs="{'readonly': [('state', 'in', ['fully_integrated','integrated','error'])]}"/>
                    </div>
                </div>
            </xpath>

            <xpath expr="//page/div/div[@name='product_ecommerce_configuration_setup']" position="before">
                <h4 style="font-size:20px;text-align:center;color:white;background-color:#504A4B;"
                    attrs="{'invisible': [('ecommerce_connector', '!=', 'oracle_connector')]}">
                    Import Configuration
                </h4>
            </xpath>

            <xpath expr="//page/div/div/div[@name='common_product_stock_setup_odoo_pricelist']" position="attributes">
                <attribute name="attrs">{'invisible': [('ecommerce_connector', '=', 'oracle_connector')]}</attribute>
            </xpath>

            <xpath expr="//page/div/div/div[@name='common_product_stock_setup_stock_field']" position="before">
                <h4 style="font-size:20px;text-align:center;color:white;background-color:#504A4B;"
                    attrs="{'invisible': [('ecommerce_connector', '!=', 'oracle_connector')]}">
                    Export Configuration
                </h4>
            </xpath>

            <xpath expr="//page/div/div/div[@name='common_product_stock_setup_product_description']"
                   position="attributes">
                <attribute name="attrs">{'invisible': [('ecommerce_connector', '=', 'oracle_connector')]}</attribute>
            </xpath>
            <xpath expr="//page/div/div/div[@name='common_product_stock_setup_auto_create']" position="after">
                <div name="common_product_stock_setup_product_search_pattern"
                     class="col-xs-12 col-md-6 o_setting_box"
                     attrs="{'invisible': [('ecommerce_connector', '!=', 'oracle_connector')]}">
                    <div class="o_setting_right_pane" style="margin-left: 35px;">
                        <label for="oracle_mapped_with_odoo_product" string="Product Search Pattern"/>
                        <div class="text-muted">
                            - Product sync pattern with odoo products. This fields use to mapped fields
                            between any e-Commerce and Odoo.
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="oracle_mapped_with_odoo_product" class="o_light_label"
                                       widget="selection"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//page/div/div/div[@name='common_product_stock_setup_auto_validate_inventory']"
                   position="attributes">
                <attribute name="attrs">{'invisible': [('ecommerce_connector', '=', 'oracle_connector')]}</attribute>
            </xpath>

            <xpath expr="//page/div/div/div[@name='common_product_stock_setup_product_description']" position="after">
                <div name="common_product_stock_setup_auto_validates_inventory"
                     class="col-xs-12 col-md-6 o_setting_box"
                     attrs="{'invisible': [('ecommerce_connector', '!=', 'oracle_connector')]}">
                    <div class="o_setting_left_pane">
                        <field name="is_auto_validate_inventory"
                               attrs="{'readonly':[('state','in',['fully_integrated','error'])]}"
                               style="text-align: center;" widget="boolean_toggle"/>
                    </div>
                    <div class="o_setting_right_pane" style="margin-left: 35px;">
                        <label for="is_auto_validate_inventory"
                               attrs="{'readonly':[('state','in',['fully_integrated','error'])]}"/>
                        <div class="text-muted">
                            - If checked, then inventory automatically validate
                        </div>
                    </div>
                </div>

            </xpath>

            <xpath expr="//page/div/div[@name='order_ecommerce_configuration_setup']" position="attributes">
                <attribute name="attrs">{'invisible': [('ecommerce_connector', '=', 'oracle_connector')]}</attribute>
            </xpath>


            <xpath expr="//page/div/h2[@style='font-size:20px;text-align:center;color:white;background-color:#875A7B;'][3]"
                   position="after">
                <h4 style="font-size:20px;text-align:center;color:white;background-color:#504A4B;"
                    attrs="{'invisible': [('ecommerce_connector', '!=', 'oracle_connector')]}">
                    Import And Export Configuration
                </h4>
                <div name="product_ecommercee_configuration_setup" class="row mt16 o_settings_container">
                    <div name="common_product_stock_setup_products_description"
                         class="col-xs-12 col-md-6 o_setting_box"
                         attrs="{'invisible': [('ecommerce_connector', '!=', 'oracle_connector')]}">
                        <div class="o_setting_left_pane">
                            <field name="is_use_default_product_description"
                                   attrs="{'readonly':[('state','in',['fully_integrated','error'])]}"
                                   style="text-align: center;" widget="boolean_toggle"/>
                        </div>
                        <div class="o_setting_right_pane" style="margin-left: 35px;">
                            <label for="is_use_default_product_description"
                                   attrs="{'readonly':[('state','in',['fully_integrated','error'])]}"/>
                            <div class="text-muted">
                                - If checked, it will be attached with e-Commerce Store's Product's
                                description.
                            </div>
                        </div>
                    </div>
                    <div name="common_product_stocks_setup_odoo_pricelist"
                         class="col-xs-12 col-md-6 o_setting_box"
                         attrs="{'invisible': [('ecommerce_connector', '!=', 'oracle_connector')]}">
                        <div class="o_setting_right_pane" style="margin-left: 35px;">
                            <label for="odoo_pricelist_id" string="Pricelist"/>
                            <div class="text-muted">
                                - Product Price List
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="odoo_pricelist_id" class="o_light_label"
                                           attrs="{'required':[('state','in',['draft','integrated']),('ecommerce_connector', '=', 'oracle_connector')], 'readonly':[('state','in',['fully_integrated','error'])]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//page/div/h2[@style='font-size:20px;text-align:center;color:white;background-color:#875A7B;'][3]"
                   position="attributes">
                <attribute name="attrs">{'invisible': [('ecommerce_connector', '=', 'oracle_connector')]}</attribute>
            </xpath>

            <xpath expr="//page[@name='common_setup']" position="before">
                <page string="Store Setup" name="store_information"
                      attrs="{'invisible': [('ecommerce_connector', '!=', 'oracle_connector')]}">
                    <group>
                        <group>
                            <field name="user_name"
                                   attrs="{'required': [('ecommerce_connector', '=', 'oracle_connector')],'readonly': [('state', 'in', ['fully_integrated','integrated','error'])]}"/>
                            <field name="password" password="1"
                                   attrs="{'required': [('ecommerce_connector', '=', 'oracle_connector')],'readonly': [('state', 'in', ['fully_integrated','integrated','error'])]}"/>
                            <field name="vendor"
                                   attrs="{'required': [('ecommerce_connector', '=', 'oracle_connector')],'readonly': [('state', 'in', ['fully_integrated','integrated','error'])]}"/>
                            <field name="private_key"
                                   attrs="{'required': [('ecommerce_connector', '=', 'oracle_connector')],'readonly': [('state', 'in', ['fully_integrated','integrated','error'])]}"/>
                            <field name="oracle_authorization" password="1" invisible="1"/>
                        </group>
                        <group>
                            <field name="host"
                                   attrs="{'required': [('ecommerce_connector', '=', 'oracle_connector')],'readonly': [('state', 'in', ['fully_integrated','integrated','error'])]}"/>
                            <field name="remember_client"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="setu_multi_ecommerce_connector_oracle_action" model="ir.actions.act_window">
        <field name="name">Oracle Integration</field>
        <field name="res_model">setu.multi.ecommerce.connector</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="setu_multi_ecommerce_connector_tree_view"/>
        <field name="context">{'default_ecommerce_connector': 'oracle_connector'}</field>
        <field name="domain">[('ecommerce_connector', '=', 'oracle_connector')]</field>
    </record>

    <menuitem id="setu_multi_ecommerce_connector_oracle_menu" name="Oracle Integration"
              parent="setu_oracle_configration_main_menu" sequence="2"
              action="setu_multi_ecommerce_connector_oracle_action"/>
</odoo>
