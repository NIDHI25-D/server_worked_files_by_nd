<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="oracle_setu_ecommerce_import_export_process_wiz_form_view" model="ir.ui.view">
        <field name="name">oracle.setu.ecommerce.import.export.process.wiz.form.view</field>
        <field name="model">setu.ecommerce.import.export.process.wiz</field>
        <field name="arch" type="xml">
            <form string="Import/Export eCommerce Operation">
                <sheet>
                    <group name='multi_ecommerce_connector_id'>
                        <group>
                            <field name='multi_ecommerce_connector_id'
                                   options="{'no_create':True,'no_create_edit': True,'no_open': True}" required="1"
                                   domain="[('active','=',True),('state','=','fully_integrated'),('ecommerce_connector', '=', 'oracle_connector')]"/>
                        </group>
                        <group>
                            <field name='ecommerce_operation' string="Operations" required="1"/>
                        </group>
                    </group>
                    <notebook attrs="{'invisible': [('ecommerce_operation', 'not in', ['import_product', 'export_stock','import_specific_product'])]}">
                        <page string="Sync Option">
                            <group name="ecommerce_import_products"
                                   attrs="{'invisible':[('ecommerce_operation','!=','import_product')]}">
                                <group>
                                    <field name="orders_from_date"
                                           attrs="{'required':[('ecommerce_operation','=','import_product')]}"/>
                                    <field name="orders_to_date"
                                           attrs="{'required':[('ecommerce_operation','=','import_product')]}"/>
                                </group>
                                <group>
                                    <field name="import_products_based_on_date"
                                           attrs="{'required':[('ecommerce_operation','=','import_product')]}"/>
                                    <field name="is_skip_existing_product_update"/>
                                </group>
                            </group>
                            <group name="export_stock"
                                   attrs="{'invisible':[('ecommerce_operation','!=','export_stock')]}">
                                <group>
                                    <field name="export_stock_from"
                                           attrs="{'required':[('ecommerce_operation','=','export_stock')]}"/>
                                </group>
                            </group>
                            <group name="import_specific_product"
                                   attrs="{'invisible':[('ecommerce_operation','!=','import_specific_product')]}">
                                <field name="import_specific_template_ids"
                                       attrs="{'required':[('ecommerce_operation','=','import_specific_product')]}"/>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <field name="is_hide_perform_operation_button" invisible="1"/>
                        <button name="ecommerce_perform_operation" string="Perform Operation" class="oe_highlight"
                                type="object" attrs="{'invisible':[('is_hide_perform_operation_button','=', True)]}"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="setu_ecommerce_update_existing_product_wiz_action_oracle" model="ir.actions.act_window">
        <field name="name">Update Existing Product in Oracle</field>
        <field name="res_model">setu.ecommerce.import.export.process.wiz</field>
        <field name="binding_model_id" ref="model_setu_oracle_product_template"/>
        <field name="target">new</field>
        <field name="view_id" ref="setu_ecommerce_based.setu_ecommerce_update_product_process_wiz_form_view"/>
    </record>

    <record id="setu_ecommerce_import_export_process_wiz_oracle_action" model="ir.actions.act_window">
        <field name="name">Oracle Operations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">setu.ecommerce.import.export.process.wiz</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="oracle_setu_ecommerce_import_export_process_wiz_form_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="setu_oracle_import_export_child_menu" name="Oracle Operations"
              parent="setu_oracle_connector.setu_oracle_operation_main_menu"
              action="setu_ecommerce_import_export_process_wiz_oracle_action" sequence="1"/>

</odoo>
