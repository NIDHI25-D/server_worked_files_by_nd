<?xml version="1.0" ?>
<odoo>
    <record id="setu_shopify_product_variant_list_view" model="ir.ui.view">
        <field name="name">setu.shopify.product.variant.list.view</field>
        <field name="model">setu.shopify.product.variant</field>
        <field name="arch" type="xml">
            <list create="false">
                <field name="sequence"/>
                <field name="name"/>
                <field name="default_code"/>
                <field name="odoo_product_id"/>
                <field name="shopify_variant_id"/>
                <field name="multi_ecommerce_connector_id"/>
                <field name="is_exported_in_shopify" widget="boolean_toggle"/>
            </list>
        </field>
    </record>


    <record id="setu_shopify_product_variant_form_view" model="ir.ui.view">
        <field name="name">setu.shopify.product.variant.form.view</field>
        <field name="model">setu.shopify.product.variant</field>
        <field name="arch" type="xml">
            <form string="Shopify Product Form View" readonly="1">
                <sheet>
                    <field name="active" class="oe_inline" invisible='1'/>
                    <div invisible="active == True">
                        <span class="bg-danger">Archived</span>
                    </div>
                    <div class="oe_title" style="width: 390px;">
                        <label class="oe_edit_only" for="name" string="Title"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Variant Information">
                            <group>
                                <group>
                                    <field name="multi_ecommerce_connector_id"
                                           readonly="is_exported_in_shopify == True"/>
                                    <field name="setu_shopify_template_id"/>
                                    <field name="odoo_product_id" readonly="1"/>

                                </group>
                                <group>
                                    <field name="shopify_variant_id" readonly="1"/>
                                    <field name="default_code"/>
                                    <field name="sequence"/>
                                    <field name="is_variant_taxable" widget="boolean_toggle"/>
                                    <field name="product_cost" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Inventory Information">
                            <group>
                                <group>
                                    <field name="shopify_inventory_item_id" readonly="1"/>
                                </group>
                                <group>
                                    <field name="product_inventory_management"/>
                                    <field name="product_inventory_policy"
                                           invisible="product_inventory_management == 'Dont Manage via Shopify'"/>
                                </group>
                            </group>
                        </page>
                        <page string="Variant Media">
                            <group string="Images Info" colspan="4">
                                <field name="setu_shopify_image_ids"
                                       context="{'default_setu_shopify_variant_id':id,'default_setu_shopify_template_id':setu_shopify_template_id}"
                                       mode="kanban" options="{'create_text':'Add a Media'}" nolabel="1">
                                </field>
                            </group>
                        </page>
                        <page string="Sync">
                            <group>
                                <group>
                                    <field name="shopify_product_create_date" readonly="1"/>
                                    <field name="shopify_product_last_updated_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="is_exported_in_shopify" readonly="1" widget="boolean_toggle"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="setu_shopify_product_variant_search_view" model="ir.ui.view">
        <field name="name">setu.shopify.product.variant.search.view</field>
        <field name="model">setu.shopify.product.variant</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="default_code"/>
                <field name="odoo_product_id"/>
                <field name="shopify_variant_id" string="Shopify Variant Id"/>
                <field name="multi_ecommerce_connector_id"/>
                <filter name="is_exported_in_shopify" string="Not Synced"
                        domain="[('is_exported_in_shopify','=',False)]"/>
                <filter name="is_variant_taxable" string="Taxable variant" domain="[('is_variant_taxable','=',True)]"/>
                <group>
                    <filter string="e-Commerce Connector" name="multi_ecommerce_connector_id"
                            context="{'group_by':'multi_ecommerce_connector_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="setu_shopify_product_variant_action" model="ir.actions.act_window">
        <field name="name">Shopify Variants</field>
        <field name="res_model">setu.shopify.product.variant</field>
        <field name="view_id" ref="setu_shopify_product_variant_list_view"/>
    </record>

    <menuitem id="setu_shopify_product_variant_main_menu" name="Shopify Variants"
              parent="setu_shopify_connector.setu_shopify_product_catalog_main_menu"
              action="setu_shopify_product_variant_action" sequence="3"/>

</odoo>
