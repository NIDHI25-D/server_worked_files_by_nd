<?xml version="1.0" ?>
<odoo>

    <record id="setu_shopify_payment_gateway_list_view" model="ir.ui.view">
        <field name="name">setu.shopify.payment.gateway.list.view</field>
        <field name="model">setu.shopify.payment.gateway</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="multi_ecommerce_connector_id"/>
            </list>
        </field>
    </record>

    <record id="setu_shopify_payment_gateway_form_view" model="ir.ui.view">
        <field name="name">setu.shopify.payment.gateway.form.view</field>
        <field name="model">setu.shopify.payment.gateway</field>
        <field name="arch" type="xml">
            <form string="Payment Gateway" readonly="1">
                <sheet>
                    <group name="Payment Gateway">
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="multi_ecommerce_connector_id"
                                   options="{'no_create':True,'no_create_edit': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="setu_shopify_payment_gateway_search_view" model="ir.ui.view">
        <field name="name">setu.shopify.payment.gateway.search.view</field>
        <field name="model">setu.shopify.payment.gateway</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Payment Gateway">
                <field name="name"/>
                <field name="code"/>
                <field name="active" invisible="1"/>
                <field name="multi_ecommerce_connector_id"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active','=',False)]"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="e-Commerce Connector" name="Instance"
                            context="{'group_by':'multi_ecommerce_connector_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="setu_shopify_payment_gateway_action" model="ir.actions.act_window">
        <field name="name">Payment Gateway</field>
        <field name="res_model">setu.shopify.payment.gateway</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="setu_shopify_payment_gateway_main_menu" name="Payment Gateway"
              parent="setu_shopify_connector.setu_shopify_configuration_main_menu"
              action="setu_shopify_payment_gateway_action" sequence="2"/>
</odoo>
