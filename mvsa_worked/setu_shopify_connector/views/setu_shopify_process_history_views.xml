<?xml version="1.0" ?>
<odoo>

    <record id="setu_process_history_form_view_extended" model="ir.ui.view">
        <field name="name">setu.process.history,form.view.extended</field>
        <field name="model">setu.process.history</field>
        <field name="inherit_id" ref="setu_ecommerce_based.setu_process_history_form_view"/>
        <field name="arch" type="xml">
            <field name="record_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="setu_shopify_process_history_line_list_view" model="ir.ui.view">
        <field name="name">setu.process.history,form.view</field>
        <field name="model">setu.process.history.line</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list create="false">
                <field name="product_id"/>
                <field name="order_ref"/>
                <field name="default_code"/>
                <field name="message"/>
                <field name="model_id"/>
                <field name="record_id"/>
            </list>
        </field>
    </record>

    <record id="setu_shopify_process_history_action" model="ir.actions.act_window">
        <field name="name">Process History</field>
        <field name="res_model">setu.process.history</field>
        <field name="domain">[('ecommerce_connector','=','shopify_connector')]</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Not found any process history yet.
            </p>
        </field>
    </record>

    <record id="setu_shopify_process_history_line_action" model="ir.actions.act_window">
        <field name="name">Process History Lines</field>
        <field name="res_model">setu.process.history.line</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="setu_shopify_connector.setu_shopify_process_history_line_list_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Not found any process history lines yet.
            </p>
        </field>
    </record>

    <menuitem id="setu_shopify_process_history_process_main_menu" name="Process History"
              parent="setu_shopify_connector.setu_shopify_process_history_main_menu"
              action="setu_shopify_process_history_action" sequence="1"/>
    <menuitem id="setu_shopify_process_history_line" name="Process History Lines"
              parent="setu_shopify_connector.setu_shopify_process_history_main_menu"
              action="setu_shopify_process_history_line_action" sequence="2"/>
</odoo>
