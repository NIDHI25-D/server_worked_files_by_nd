<?xml version="1.0" ?>
<odoo>
    <record id="setu_shopify_stock_picking_list_view_extended" model="ir.ui.view">
        <field name="name">setu.shopify.stock.picking.list.view.extended</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="picking_type_id" position="after">
                <field name="is_shopify_delivery_order" invisible="1"/>
                <field name="is_updated_shopify_delivery"
                       invisible="is_shopify_delivery_order != True" widget="boolean_toggle"/>
            </field>
        </field>
    </record>

    <record id="setu_shopify_stock_picking_form_view_extended" model="ir.ui.view">
        <field name="name">setu.shopify.stock.picking.form.view.extended</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field eval="12" name="priority"/>
        <field name="arch" type="xml">
            <field name="move_type" position="after">
                <field name="is_shopify_delivery_order" invisible="1"/>
                <field name="is_updated_shopify_delivery"
                       invisible="is_shopify_delivery_order != True" widget="boolean_toggle"/>
                <field name="multi_ecommerce_connector_id" invisible="1"/>
            </field>
        </field>
    </record>


    <record id="setu_shopify_stock_picking_search_view_extended" model="ir.ui.view">
        <field name="name">setu.shopify.stock.picking.search.view.extended</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter name="is_updated_shopify_delivery" string="Updated In Shopify"
                        domain="[('is_updated_shopify_delivery','=',True)]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="e-Commerce Connector" name="multi_ecommerce_connector_id"
                        context="{'group_by':'multi_ecommerce_connector_id'}"/>
            </xpath>
        </field>
    </record>


    <record id="setu_shopify_stock_picking_action" model="ir.actions.act_window">
        <field name="name">Shopify Delivery Orders</field>
        <field name="res_model">stock.picking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_shopify_delivery_order','=','True')]</field>
        <field name="context">{'create': False}</field>
        <field name="search_view_id" ref="stock.view_picking_internal_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Not found any shopify delivery orders yet.
            </p>
        </field>
    </record>

    <menuitem id="setu_shopify_shipment_child_menu" name="Shipment"
              parent="setu_shopify_connector.setu_shopify_sale_order_main_menu"
              action="setu_shopify_stock_picking_action" sequence="5"/>
</odoo>
