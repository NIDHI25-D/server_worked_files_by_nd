        <xpath expr="//div[hasclass('product-name')]" position="before">
            <span class="qty-tag" t-att-id="'qty-tag'+props.product.id">
                 <t t-out="this.stockQuantity || 0"/>
            </span>
            <t t-if="props.product.default_code">
                [<t t-out="props.product.default_code"/>]
            </t>
        </xpath>
    </t>
</templates>
