<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="account_payment_terms_inherited" model="ir.ui.view">
            <field name="name">account.payment.terms.inherited</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">

                <xpath expr="//form/sheet/group" position="inside">
                    <group>
                        <field name="payment_terms_uses"/>
                        <field name="apply_loc"/>
                        <field name="credit_days_configure"
                               invisible="apply_loc == False"
                               required="apply_loc == True"/>
                    </group>
                </xpath>

            </field>
        </record>

    </data>
</odoo>