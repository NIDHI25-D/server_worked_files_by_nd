<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="res_partner_forms_inherited" model="ir.ui.view">
            <field name="name">res.partner.forms.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="purchase.view_partner_property_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='property_purchase_currency_id']" position="after">
                    <field name="departure_shipment_ports_ids" widget="many2many_tags"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>