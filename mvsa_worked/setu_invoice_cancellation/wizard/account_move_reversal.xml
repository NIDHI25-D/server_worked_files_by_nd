<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="add_field_in_credit_note_wizard" model="ir.ui.view">
            <field name="name">Add field in credit notes wizard</field>
            <field name="model">account.move.reversal</field>
            <field name="inherit_id" ref="account.view_account_move_reversal"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group[1]/field[@name='journal_id']" position="before">
                    <field name="reason_id" options="{'no_open':True,'no_create': True}" required="1" domain="[('is_return','=',False)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
