<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="put_in_pack_package_type_wizard_view_form" model="ir.ui.view">
            <field name="name">put.in.pack.package.type.wizard.view.form</field>
            <field name="model">put.in.pack.package.type.wizards</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="package_type" required="1"/>
                                <label for="packages_shipping_weight"/>
                                <div class="o_row">
                                    <field name="packages_shipping_weight"/>
                                    <span>Kg</span>
                                </div>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="create_package_with_type" string="Create Packages" type="object"
                                class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="put_in_pack_package_type_wizard_action" model="ir.actions.act_window">
            <field name="name">Package details</field>
            <field name="res_model">put.in.pack.package.type.wizards</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>