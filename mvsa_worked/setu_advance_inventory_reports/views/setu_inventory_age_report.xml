<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="setu_inventory_age_report_form" model="ir.ui.view">
            <field name="name">setu.inventory.age.report.form</field>
            <field name="model">setu.inventory.age.report</field>
            <field name="arch" type="xml">
                <form string="Inventory Age Report">
                    <sheet string="Inventory Age">
                        <group expand="0">
                            <group expand="0" string="Products &#038; Categories">
                                <field name="product_category_ids" widget="many2many_tags"
                                       options="{'no_create_edit': True}"/>
                                <field name="product_ids" widget="many2many_tags" options="{'no_create_edit': True}"
                                       domain="[('categ_id', 'child_of', product_category_ids),('type','!=','combo'),('product_tmpl_id.is_storable','=',True)] if product_category_ids else [('categ_id', '!=', False),('type','!=','combo'),('product_tmpl_id.is_storable','=',True)]"/>
                            </group>
                            <group expand="0" string="Companies">
                                <field name="company_ids" widget="many2many_tags"
                                       domain="[('id', 'in', allowed_company_ids)]" options="{'no_create_edit': True}"/>
                            </group>
                        </group>

                    </sheet>
                    <footer>
                        <button name="download_report" string="Excel Report" type="object"
                                class="oe_highlight"/>
                        <button name="download_report_in_listview" string="View Data" type="object"
                                class="oe_highlight"/>
                        <button name="download_report_in_listview" string="View Graph" type="object"
                                class="oe_highlight" context="{'graph_report':True}"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="setu_age_report_action" model="ir.actions.act_window">
            <field name="name">Inventory Age Analysis</field>
            <field name="res_model">setu.inventory.age.report</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="setu_age_dashboard_report_menu" action="setu_age_report_action"
                  parent="setu_advance_inventory_reports.panel_reports_menu"
                  sequence="2"/>

        <record id="setu_inventory_age_bi_report_list" model="ir.ui.view">
            <field name="name">setu.inventory.age.bi.report.list</field>
            <field name="model">setu.inventory.age.bi.report</field>
            <field name="arch" type="xml">
                <list string="Inventory Age Analysis" create="false" editable="top">
                    <field name="company_id" readonly="1" options="{'no_open': True}"/>
                    <field name="product_id" readonly="1" options="{'no_open': True}"/>
                    <field name="product_category_id" readonly="1" options="{'no_open': True}"/>
                    <field name="current_stock" readonly="1" options="{'no_open': True}"/>
                    <field name="current_stock_value" readonly="1" options="{'no_open': True}"/>
                    <field name="days_old" readonly="1" options="{'no_open': True}"/>
                    <field name="oldest_stock_qty" readonly="1" options="{'no_open': True}"/>
                    <field name="oldest_stock_value" readonly="1" options="{'no_open': True}"/>
                    <field name="stock_qty_ratio" readonly="1" options="{'no_open': True}"/>
                    <field name="stock_value_ratio" readonly="1" options="{'no_open': True}"/>
                </list>
            </field>
        </record>

        <record id="setu_inventory_age_bi_report_search" model="ir.ui.view">
            <field name="name">setu.inventory.age.bi.report.search</field>
            <field name="model">setu.inventory.age.bi.report</field>
            <field name="arch" type="xml">
                <search string="Age">
                    <field name="company_id"/>
                    <field name="product_id"/>
                    <field name="product_category_id"/>

                    <separator/>

                    <filter string="Product" context="{'group_by':'product_id'}" name="product_id_groupby"/>
                    <filter string="Product Category" context="{'group_by':'product_category_id'}"
                            name="product_category_id_groupby"/>
                    <filter string="Company" context="{'group_by':'company_id'}" name="company_id_groupby"/>
                    <separator/>
                </search>
            </field>
        </record>

        <record id="setu_inventory_age_bi_report_graph" model="ir.ui.view">
            <field name="name">setu.inventory.age.bi.report.graph</field>
            <field name="model">setu.inventory.age.bi.report</field>
            <field name="arch" type="xml">
                <graph string="Inventory Age Analysis" type="bar" stacked="False">
                    <field name="company_id" type="col"/>
                    <field name="oldest_stock_qty" type="row"/>
                    <field name="days_old" type="measure"/>
                </graph>
            </field>
        </record>

    </data>
</odoo>
