<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="view_create_tms_shipment_wizard" model="ir.ui.view">
        <field name="name">view.create.tms.shipment.wizard</field>
        <field name="model">create.tms.shipment.wiz</field>
        <field name="arch" type="xml">
            <form string="Create TMS Shipment">
                <group>
                    <group>
                        <field name="route_id" options="{'no_create':1, 'no_create_edit': 1}" required="1"/>
                        <field name="transporter_id" options="{'no_create':1, 'no_create_edit': 1}" required="1"/>
                        <field name="responsible_id" options="{'no_create':1, 'no_create_edit': 1}" required="1"/>
                    </group>
                    <group>
                        <field name="vehicle_id" options="{'no_create':1, 'no_create_edit': 1}" required="1"/>
                        <field name="driver_id" options="{'no_create':1, 'no_create_edit': 1}" required="1"/>
                    </group>

                </group>
                <footer>
                    <button string="Create" class="btn-primary" data-hotkey="q" type="object"
                            name="action_create_shipment"/>
                    <button string="Discard" class="btn-secondary" data-hotkey="z" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_tms_shipment_wizard" model="ir.actions.act_window">
        <field name="name">Create TMS Shipment</field>
        <field name="res_model">create.tms.shipment.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


</odoo>