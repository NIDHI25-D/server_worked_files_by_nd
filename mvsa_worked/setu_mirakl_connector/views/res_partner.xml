<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="setu_mirakl_res_partner_form_view_extended" model="ir.ui.view">
        <field name="name">setu.mirakl.res.partner.form.view.extended</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Mirakl Information" name="mirakl_information" invisible="is_customer_from_mirakl == False">
                <group string="Mirakl Information" name="mirakl_information" invisible="is_customer_from_mirakl == False">
                    <group>
                        <field name="is_customer_from_mirakl" readonly="1"/>
                        <field name="mirakl_customer_id" readonly="0"/>
                    </group>
                </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>