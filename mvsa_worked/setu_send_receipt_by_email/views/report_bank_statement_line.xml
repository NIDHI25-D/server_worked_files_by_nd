<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_payment_receipt_document_cfdi">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-set="cfdi_vals"
                   t-value="o.env['l10n_mx_edi.document']._decode_cfdi_attachment(o.move_id.l10n_mx_edi_cfdi_attachment_id.raw)"/>
                <t t-if="o.l10n_mx_edi_cfdi_state != 'sent'">
                    <!-- due to HTML preview for device responsive -->
                    <button class="btn-danger #{'btn' if report_type != 'html' else ''}" style="color: white;">
                        <h1>A signature of this payment is required, but it is not signed.</h1>
                    </button>
                </t>
                <t t-set="address">
                    <div class="address">
                        <address t-field="o.partner_id" style="margin-top: 0 !important;margin-bottom: 0 !important;font-size:18px"
                                 t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        <div t-if="o.partner_id.vat" class="mt16" style="font-size: 18px;">
                            <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"
                               id="inv_tax_id_label"/>
                            <t t-else="">Tax ID</t>:
                            <span t-field="o.partner_id.vat"/>
                            <br/>
                            <span t-field="o.partner_id.l10n_mx_edi_fiscal_regime"/>
                        </div>
                    </div>
                </t>
                <div class="page">
                    <h3>
                        <strong><span>Payment Receipt</span>:
                            <span t-field="o.name">INV0001</span>
                        </strong>
                    </h3>

                    <div class="mb-4 mt-3">
                        <div name="date" class="row">
                            <div class="col-6" t-if="o.date">
                                Payment Date:
                                <span t-field="o.date">2023-01-01</span>
                            </div>
                            <div t-if="o.move_id.l10n_mx_edi_payment_method_id" class="col-6">
                                <strong>Payment Way CFDI:</strong>
                                <span t-esc="'%s - %s' % (o.move_id.l10n_mx_edi_payment_method_id.code, o.move_id.l10n_mx_edi_payment_method_id.name)"/>
                                <div id="uso">
                                    <t t-if="cfdi_vals.get('usage')">
                                        <strong>Usage:</strong>
                                        <span t-esc="cfdi_vals['usage']"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <div t-if="o.origin_payment_id.partner_type" class="col-6">
                            <t t-if="o.origin_payment_id.partner_type == 'customer'">
                                Customer:
                            </t>
                            <t t-else="o.origin_payment_id.partner_type == 'supplier'">
                                Vendor:
                            </t>
                            <span t-field="o.partner_id" data-oe-demo="Marc Demo"/>
                        </div>
                        <div t-if="not o.origin_payment_id.partner_type" class="col-6">
                            Customer:
                            <span t-field="o.partner_id" data-oe-demo="Marc Demo"/>
                        </div>
                        <div class="col-6" t-if="o.partner_id.l10n_mx_edi_fiscal_regime">
                            Fiscal Regime: (<span t-out="o.partner_id.l10n_mx_edi_fiscal_regime"/>)
                            <span t-field="o.partner_id.l10n_mx_edi_fiscal_regime"/>
                        </div>
                        <div class="row">
                            <!-- Hide payment from and payment to from journal entry payment pdf.-->
                            <!--                        <div class="col-6">-->
                            <!--                            <t t-if="o.amount > 0">-->
                            <!--                                <strong>Payment From:</strong>-->
                            <!--                            </t>-->
                            <!--                            <t t-else="">-->
                            <!--                                <strong>Payment To:</strong>-->
                            <!--                            </t>-->
                            <!--                            <span t-field="o.partner_id"/>-->
                            <!--                        </div>-->
                            <div class="col-6">
                                <span>XML VAT:</span>
                                <span t-esc="o.l10n_mx_edi_cfdi_customer_rfc">EKU9003173C9</span>
                            </div>
                            <div class="col-xs-6" t-if="o.l10n_mx_edi_payment_method_id">
                                <t t-if="not o.l10n_mx_edi_cfdi_uuid">
                                    <strong>Payment Method:</strong>
                                    <span t-field="o.l10n_mx_edi_payment_method_id.name"/>
                                </t>
                            </div>
                        </div>
                        <div class="row mb64">
                            <div class="col-6" t-if="o.amount">
                                <strong>Payment Amount:</strong>
                                <span t-field="o.amount"
                                      t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                            </div>
                            <div class="col-6" t-if="o.ref">
                                <strong>Memo:</strong>
                                <span t-field="o.ref"/>
                            </div>
                        </div>
                    </div>
                    <t t-if="o.move_id.l10n_mx_edi_cfdi_uuid">
                        <t t-set="move_line_ids"
                           t-value="o.env['account.move.line'].browse(list(set(o.line_ids._reconciled_lines()) - set(o.line_ids.ids)))"/>
                        <t t-set="invoice_ids" t-value="move_line_ids.mapped('move_id')"/>
                        <t t-set="docs_related"
                           t-value="o.move_id._l10n_mx_edi_get_extra_payment_report_values()"/>
                        <t t-set="invoices"
                           t-value="docs_related['cfdi_node'].xpath('//pago20:DoctoRelacionado', namespaces={'pago20': 'http://www.sat.gob.mx/Pagos20'})"/>
                        <!-- Section to bank accounts-->
                        <t t-set="vat_em"
                           t-value="docs_related.get('payment_info','').get('from_account_vat','') if docs_related.get('payment_info','') else ''"/>
                        <t t-set="bank_em"
                           t-value="docs_related.get('payment_info','').get('from_account_name','') if docs_related.get('payment_info','') else ''"/>
                        <t t-set="acc_em"
                           t-value="docs_related.get('payment_info','').get('from_account_number','') if docs_related.get('payment_info','') else ''"/>
                        <t t-set="vat_re"
                           t-value="docs_related.get('payment_info','').get('to_account_vat','') if docs_related.get('payment_info','') else ''"/>
                        <t t-set="acc_re"
                           t-value="docs_related.get('payment_info','').get('to_account_number','') if docs_related.get('payment_info','') else ''"/>
                        <table class="table table-sm" t-if="acc_em or acc_re">
                            <thead>
                                <tr>
                                    <th t-if="vat_em">
                                        <t t-esc="o.company_id.country_id.vat_label or 'VAT'"/>
                                        <span>Emitter Acc. Ord.</span>
                                    </th>
                                    <th t-if="bank_em">Bank Name Acc. Ord.</th>
                                    <th t-if="acc_em">Account Ord.</th>
                                    <th t-if="vat_re">
                                        <t t-esc="o.company_id.country_id.vat_label or 'VAT'"/>
                                        <span>Emitter Acc. Ben.</span>
                                    </th>
                                    <th t-if="acc_re">Account Ben.</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td t-if="vat_em">
                                        <span t-esc="vat_em"/>
                                    </td>
                                    <td t-if="bank_em">
                                        <span t-esc="bank_em"/>
                                    </td>
                                    <td t-if="acc_em">
                                        <span t-esc="acc_em"/>
                                    </td>
                                    <td t-if="vat_re">
                                        <span t-esc="vat_re"/>
                                    </td>
                                    <td t-if="acc_re">
                                        <span t-esc="acc_re"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- Finish section to bank accounts-->
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Invoice</th>
                                    <th>UUID</th>
                                    <th class="text-end">Partiality</th>
                                    <th class="text-end">Previous balance</th>
                                    <th class="text-end">Amount Paid</th>
                                    <th class="text-end">Balance</th>
                                    <th>Currency</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="invoices" t-as="inv">
                                    <t t-set="inv_currency"
                                       t-value="o.env['res.currency'].search([('name', '=', inv.get('MonedaDR'))], limit=1)"/>
                                    <td>
                                        <span t-esc="invoice_ids.filtered(lambda i: i.l10n_mx_edi_cfdi_uuid == inv.get('IdDocumento')).name or ''"/>
                                    </td>
                                    <td>
                                        <span t-esc="inv.get('IdDocumento')"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-esc="inv.get('NumParcialidad', '')"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-esc="float(inv.get('ImpSaldoAnt', ''))"
                                              t-options="{'widget': 'monetary', 'display_currency': inv_currency}"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-esc="float(inv.get('ImpPagado', ''))"
                                              t-options="{'widget': 'monetary', 'display_currency': inv_currency}"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-esc="float(inv.get('ImpSaldoInsoluto', ''))"
                                              t-options="{'widget': 'monetary', 'display_currency': inv_currency}"/>
                                    </td>
                                    <td>
                                        <span t-esc="inv.get('MonedaDR')"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                    <!--                    Request changes to not show below details to report-->
                    <!--                    <t t-if="o.move_id.l10n_mx_edi_cfdi_uuid">-->
                    <!--                        <table class="table table-sm">-->
                    <!--                            <thead>-->
                    <!--                                <tr>-->
                    <!--                                    <th>Invoice Date</th>-->
                    <!--                                    <th>Invoice Number</th>-->
                    <!--                                    <th class="text-end">Original Amount</th>-->
                    <!--                                    <th class="text-end">Amount Paid</th>-->
                    <!--                                    <th class="text-end">Balance</th>-->
                    <!--                                </tr>-->
                    <!--                            </thead>-->
                    <!--                            <tbody>-->
                    <!--                                <tr t-foreach="invoice_ids" t-as="inv">-->
                    <!--                                    <td>-->
                    <!--                                        <span t-field="inv.invoice_date"/>-->
                    <!--                                    </td>-->
                    <!--                                    <td>-->
                    <!--                                        <span t-field="inv.name"/>-->
                    <!--                                    </td>-->
                    <!--                                    <td class="text-end">-->
                    <!--                                        <span t-field="inv.amount_total"/>-->
                    <!--                                    </td>-->
                    <!--                                    <td class="text-end">-->
                    <!--                                        <span t-esc="inv.amount_total - inv.amount_residual"-->
                    <!--                                              t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>-->
                    <!--                                    </td>-->
                    <!--                                    <td class="text-end">-->
                    <!--                                        <span t-field="inv.amount_residual"/>-->
                    <!--                                    </td>-->
                    <!--                                </tr>-->
                    <!--                            </tbody>-->
                    <!--                        </table>-->
                    <!--                    </t>-->
                    <div class="row" id="complement">
                        <div t-if="cfdi_vals.get('sello')" class="barcode col-3">
                            <img alt="Barcode"
                                 t-att-src="'/report/barcode/?barcode_type=QR&amp;value=%s&amp;width=180&amp;height=180' % quote_plus('https://verificacfdi.facturaelectronica.sat.gob.mx/default.aspx?' + keep_query(                                 re=o.l10n_mx_edi_cfdi_supplier_rfc, rr=o.l10n_mx_edi_cfdi_customer_rfc,                                 tt=0, id=o.l10n_mx_edi_cfdi_uuid)                                 + '&amp;fe=%s' % quote_plus(cfdi_vals['sello'], 'utf-8', 'strict', '=/').replace('%2B', '+'))"/>
                        </div>
                        <div class="complement-details col-9">
                            <div class="digital-stamp" style="display: block;overflow: hidden;font-size:5px">
                                <span>Digital stamp of the emitter</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span t-esc="cfdi_vals.get('sello')"/>
                            </div>
                            <div class="digital-stamp">
                                <span>Digital stamp SAT</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span t-esc="cfdi_vals.get('sello_sat')"/>
                            </div>
                            <div class="digital-stamp">
                                <span>Original chain complement of digital certification SAT</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span class="nowrap" t-esc="cfdi_vals.get('cadena')"/>
                            </div>
                            <div class="digital-stamp">
                                <span>Extra Info</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span>Emitter certificate:</span>
                                <span t-esc="cfdi_vals.get('certificate_number')"/>
                                <span>| SAT Certificate:</span>
                                <span t-esc="cfdi_vals.get('certificate_sat_number')"/>
                                <span>| Expedition place:</span>
                                <span t-esc="cfdi_vals.get('expedition')"/>
                                <span>| Fiscal Regime:</span>
                                <span t-esc="cfdi_vals.get('fiscal_regime')"/>
                                <span>| Emission Date:</span>
                                <span t-esc="cfdi_vals.get('emission_date_str')"/>
                                <span>| Certification Date:</span>
                                <span t-esc="cfdi_vals.get('stamp_date')"/>
                                <span>| Fiscal Folio:</span>
                                <span t-esc="cfdi_vals.get('uuid')"/>
                            </div>
                            <div class="digital-stamp-content text-center">
                                <strong>This document is a printed representation of a CFDI</strong>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div id="exchange_rate" t-if="o.currency_id.id != o.company_id.currency_id.id" name="exchange_rate"
                         class="col-6">
                        <strong>Exchange Rate:</strong>
                        <span t-field="o.move_id.l10n_mx_currency_rate"/>
                    </div>
                </div>
                <div t-if="o.company_id.vat != o.l10n_mx_edi_cfdi_supplier_rfc" class="col-6" style="display:none;">
                    <span>XML VAT:</span>
                    <span t-esc="o.l10n_mx_edi_cfdi_supplier_rfc"/>
                </div>
                <div t-if="o.l10n_mx_edi_payment_method_id" class="col-6" style="display:none;">
                    <strong>Payment Way CFDI:</strong>
                    <span t-esc="'%s - %s' % (o.l10n_mx_edi_payment_method_id.code, o.l10n_mx_edi_payment_method_id.name)"/>
                </div>
            </t>
        </template>

        <template id="report_payment_receipt_cfdi">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang or o.company_id.partner_id.lang"/>
                    <t t-call="setu_send_receipt_by_email.report_payment_receipt_document_cfdi" t-lang="lang"/>
                </t>
            </t>
        </template>

        <record id="action_report_payment_receipt_cfdi" model="ir.actions.report">
            <field name="name">Payment Receipt</field>
            <field name="model">account.bank.statement.line</field>
            <field name="report_type">qweb-pdf</field>
            <field name="print_report_name">(object.name or '').replace('/','-')</field>
            <field name="report_name">setu_send_receipt_by_email.report_payment_receipt_cfdi</field>
            <field name="report_file">setu_send_receipt_by_email.report_payment_receipt_cfdi</field>
            <field name="binding_model_id" ref="account.model_account_bank_statement_line"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
