<odoo>
    <data>
        <record model="ir.ui.view" id="ir_setting_extend_form">
            <field name="name">ir_setting_form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref='hr.res_config_settings_view_form'/>
            <field name="arch" type="xml">
                <xpath expr="//block[@name='integration']" position="after">
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label string="Mail for Product Information" for="send_mail_to_id"/>
                                <div class="mt16">
                                    <field name="send_mail_to_id"
                                           options="{'no_open':True,'no_create':1,'no_create_edit':1}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>