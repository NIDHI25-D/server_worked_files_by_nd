<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="shipping_incident_view_list" model="ir.ui.view">
            <field name="name">shipping_incident_view_list</field>
            <field name="model">shipping.incident</field>
            <field name="arch" type="xml">
                <list string="Incidents" editable="top">
                    <field name="name" required="True"/>
                    <field name="color" widget="color_picker"/>
                </list>
            </field>
        </record>

        <record id="shipping_incident_action" model="ir.actions.act_window">
            <field name="name">Shipping Incidents</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shipping.incident</field>
            <field name="view_mode">list</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="shipping_incident_menu" name="Incidents" parent="sale.menu_sale_config"
                  action="shipping_incident_action" sequence="18"/>
    </data>
</odoo>