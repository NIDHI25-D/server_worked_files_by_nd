<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <record id="email_template_for_product_information" model="mail.template">
            <field name="name">Product Information</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">Product Information</field>
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="email_to">{{ object.email_formatted }}</field>
            <field name="lang">{{ object.lang }}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <div>
                    Here is updated product information.
                </div>
            </field>
        </record>
    </data>
</odoo>