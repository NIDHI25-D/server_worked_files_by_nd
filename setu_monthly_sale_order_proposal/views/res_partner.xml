<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="monthly_proposal_res_partner" model="ir.ui.view">
        <field name="name">monthly.proposal.res.partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']/group[@name='container_row_2']/group[@name='misc']" position="after">
                    <group string="Monthly Proposal" name="monthly_proposal">
                        <field name="monthly_proposal_pricelist_id"/>
                        <field name="date_to_create_sale_order" readonly="1"/>
                    </group>
            </xpath>
        </field>
    </record>
</odoo>