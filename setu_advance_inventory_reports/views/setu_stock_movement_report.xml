<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="setu_stock_movement_report_form" model="ir.ui.view">
            <field name="name">setu.stock.movement.report.form</field>
            <field name="model">setu.stock.movement.report</field>
            <field name="arch" type="xml">
                <form string="Stock Movement Report">
                    <sheet string="Stock Transaction Report">
                        <group expand="0" string="Filters">
                            <group expand="0" string="Transactions up to a certain date">
                                <field name="get_report_from_beginning"/>
                            </group>
                            <group expand="0" string="Select Proper Date To Filter Transactions ">
                                <field name="upto_date" required="get_report_from_beginning"
                                       invisible="not get_report_from_beginning"/>
                                <field name="start_date" required="not get_report_from_beginning"
                                       invisible="get_report_from_beginning"/>
                                <field name="end_date" required="not get_report_from_beginning"
                                       invisible="get_report_from_beginning"/>
                            </group>
                        </group>
                        <group expand="0">
                            <group expand="0" string="Products &#038; Categories">
                                <field name="product_category_ids" widget="many2many_tags"
                                       options="{'no_create_edit': True}"/>
                                <field name="product_ids" widget="many2many_tags" options="{'no_create_edit': True}"
                                       domain="[('categ_id', 'child_of', product_category_ids),('type','!=','combo'),('product_tmpl_id.is_storable','=',True)] if product_category_ids else [('categ_id', '!=', False),('type','!=','combo'),('product_tmpl_id.is_storable','=',True)]"/>
                            </group>
                            <group expand="0" string="Companies &#038; Warehouses">
                                <field name="company_ids" widget="many2many_tags"
                                       domain="[('id', 'in', allowed_company_ids)]" options="{'no_create_edit': True}"/>
                                <field name="warehouse_ids" widget="many2many_tags" options="{'no_create_edit': True}"
                                       domain="[('id','in',warehouses_ids)]"/>
                                <field name="warehouses_ids" invisible="1"/>
                            </group>
                        </group>

                    </sheet>
                    <footer>
                        <button name="download_report" string="Download Report" type="object"
                                class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>


        <record id="setu_stock_movement_report_action" model="ir.actions.act_window">
            <field name="name">Stock Movement Analysis</field>
            <field name="res_model">setu.stock.movement.report</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="setu_stock_movement_dashboard_report_menu" action="setu_stock_movement_report_action"
                  parent="setu_advance_inventory_reports.panel_reports_menu"
                  sequence="10"/>

        <record id="setu_stock_movement_bi_report_tree" model="ir.ui.view">
            <field name="name">setu.stock.movement.bi.report.tree</field>
            <field name="model">setu.stock.movement.bi.report</field>
            <field name="arch" type="xml">
                <list string="Stock Movement" create="false" editable="top">
                    <field name="company_id" readonly="1" options="{'no_open': True}"/>
                    <field name="warehouse_id" readonly="1" options="{'no_open': True}"/>
                    <field name="product_id" readonly="1" options="{'no_open': True}"/>
                    <field name="product_category_id" readonly="1" options="{'no_open': True}"/>
                    <field name="opening_stock" readonly="1" options="{'no_open': True}"/>
                    <field name="sales" readonly="1" options="{'no_open': True}"/>
                    <field name="sales_return" readonly="1" options="{'no_open': True}"/>
                    <field name="purchase" readonly="1" options="{'no_open': True}"/>
                    <field name="purchase_return" readonly="1" options="{'no_open': True}"/>
                    <field name="internal_in" readonly="1" options="{'no_open': True}"/>
                    <field name="internal_out" readonly="1" options="{'no_open': True}"/>
                    <field name="adjustment_in" readonly="1" options="{'no_open': True}"/>
                    <field name="adjustment_out" readonly="1" options="{'no_open': True}"/>
                    <field name="production_in" readonly="1" options="{'no_open': True}"/>
                    <field name="production_out" readonly="1" options="{'no_open': True}"/>
                    <field name="transit_in" readonly="1" options="{'no_open': True}"/>
                    <field name="transit_out" readonly="1" options="{'no_open': True}"/>
                    <field name="closing" readonly="1" options="{'no_open': True}"/>
                </list>
            </field>
        </record>
    </data>
</odoo>
