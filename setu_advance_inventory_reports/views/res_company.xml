<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_company_view_inherited_form" model="ir.ui.view">
            <field name="name">res.company.view.inherited.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='color']" position="after">
                    <field name="oldest_stock_days" required="true"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>