<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="setu_inventory_age_breakdown_report_form" model="ir.ui.view">
            <field name="name">setu.inventory.age.breakdown.report.form</field>
            <field name="model">setu.inventory.age.breakdown.report</field>
            <field name="arch" type="xml">
                <form string="Inventory Age Breakdown Report">
                    <sheet string="Inventory Age Breakdown">
                        <group expand="0">
                            <group expand="0" string="Products &#038; Categories">
                                <field name="product_category_ids" widget="many2many_tags"
                                       options="{'no_create_edit': True}"/>
                                <field name="product_ids" widget="many2many_tags" options="{'no_create_edit': True}"
                                       domain="[('categ_id', 'child_of', product_category_ids),('type','!=','combo'),('product_tmpl_id.is_storable','=',True)] if product_category_ids else [('categ_id', '!=', False),('type','!=','combo'),('product_tmpl_id.is_storable','=',True)]"/>
                            </group>
                            <group expand="0" string="Companies">
                                <field name="company_ids" widget="many2many_tags"
                                       domain="[('id', 'in', allowed_company_ids)]" options="{'no_create_edit': True}"/>
                                <field name="breakdown_days" required="1"/>
                            </group>
                        </group>

                    </sheet>
                    <footer>
                        <button name="download_report" string="Excel Report" type="object"
                                class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="setu_age_breakdown_report_action" model="ir.actions.act_window">
            <field name="name">Inventory Age Breakdown Analysis</field>
            <field name="res_model">setu.inventory.age.breakdown.report</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="setu_age_breakdown_dashboard_report_menu" action="setu_age_breakdown_report_action"
                  parent="setu_advance_inventory_reports.panel_reports_menu"
                  sequence="1"/>

        <record id="setu_inventory_age_breakdown_bi_report_list" model="ir.ui.view">
            <field name="name">setu.inventory.age.breakdown.bi.report.list</field>
            <field name="model">setu.inventory.age.breakdown.bi.report</field>
            <field name="arch" type="xml">
                <list string="Inventory Age Breakdown Analysis">
                    <field name="company_id"/>
                    <field name="product_id"/>
                    <field name="product_category_id"/>
                    <field name="breakdown1_qty"/>
                    <field name="breakdown2_qty"/>
                    <field name="breakdown3_qty" optional="hide"/>
                    <field name="breakdown4_qty" optional="hide"/>
                    <field name="breakdown5_qty" optional="hide"/>
                    <field name="breakdown6_qty" optional="hide"/>
                    <field name="breakdown7_qty" optional="hide"/>
                    <field name="breckdown1_value"/>
                    <field name="breckdown2_value"/>
                    <field name="breckdown3_value" optional="hide"/>
                    <field name="breckdown4_value" optional="hide"/>
                    <field name="breckdown5_value" optional="hide"/>
                    <field name="breckdown6_value" optional="hide"/>
                    <field name="breckdown7_value" optional="hide"/>
                    <field name="total_stock"/>
                    <field name="total_stock_value"/>
                </list>
            </field>
        </record>

    </data>
</odoo>
