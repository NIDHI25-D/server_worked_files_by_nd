<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="pase_tag_form_view" model="ir.ui.view">
        <field name="name">pase.tag.form</field>
        <field name="model">pase.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pase_tag_list_view" model="ir.ui.view">
        <field name="name">pase.tag.list</field>
        <field name="model">pase.tag</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="pase_tag_action" model="ir.actions.act_window">
        <field name="name">Pase Tag</field>
        <field name="res_model">pase.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_pase_tag" name="Pase Tag" action="pase_tag_action" parent="combustible_configuration" sequence="13"/>

</odoo>