<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="setu_shopify_sale_order_process_configuration_list_view" model="ir.ui.view">
        <field name="name">setu.shopify.sale.order.process.configuration.list.view</field>
        <field name="model">setu.shopify.sale.order.process.configuration</field>
        <field eval="16" name="priority"/>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list >
                <field name="multi_ecommerce_connector_id" required="1" domain="[('active','=',True)]"
                       options="{'no_create':True}"/>
                <field name="setu_shopify_payment_gateway_id" required="1"
                       domain="[('multi_ecommerce_connector_id','=',multi_ecommerce_connector_id)]"
                       options="{'no_create':True}"/>
                <field name="account_payment_term_id" required="1"/>
                <field name="shopify_order_financial_status" required="1"/>
                <field name="setu_sale_order_automation_id" required="1"/>
            </list>
        </field>
    </record>

    <record id="setu_shopify_sale_order_process_configuration_form_view" model="ir.ui.view">
        <field name="name">setu.shopify.sale.order.process.configuration.form.view</field>
        <field name="model">setu.shopify.sale.order.process.configuration</field>
        <field eval="16" name="priority"/>
        <field name="arch" type="xml">
            <form string="Shopify Order Process Configuration" readonly="1">
                <group>
                    <group>
                        <field name="setu_shopify_payment_gateway_id" required="1"
                               domain="[('multi_ecommerce_connector_id','=',multi_ecommerce_connector_id)]"/>
                        <field name="multi_ecommerce_connector_id" required="1" domain="[('active','=',True)]"
                               options="{'no_create':True,'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="account_payment_term_id" required="1"/>
                        <field name="shopify_order_financial_status" required="1"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="setu_shopify_sale_order_process_configuration_search_view" model="ir.ui.view">
        <field name="name">setu.shopify.sale.order.process.configuration</field>
        <field name="model">setu.shopify.sale.order.process.configuration</field>
        <field name="arch" type="xml">
            <search string="Shopify Order Process Configuration Filter">
                <field name="setu_shopify_payment_gateway_id"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active','=',False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Instance" name="group_by_instance"
                            context="{'group_by': 'multi_ecommerce_connector_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="setu_shopify_sale_order_process_configuration_action" model="ir.actions.act_window">
        <field name="name">Order Process Configuration</field>
        <field name="res_model">setu.shopify.sale.order.process.configuration</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="setu_shopify_sale_order_process_configuration_list_view"/>
    </record>

</odoo>
