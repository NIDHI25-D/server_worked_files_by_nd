<?xml version="1.0" ?>
<odoo>
    <record id="setu_shopify_product_template_list_view" model="ir.ui.view">
        <field name="name">setu.shopify.product.template.list.view</field>
        <field name="model">setu.shopify.product.template</field>
        <field name="arch" type="xml">
            <list create="false">
                <field name="name"/>
                <field name="multi_ecommerce_connector_id"/>
                <field name="odoo_product_tmpl_id"/>
                <field name="no_total_product_variants"/>
                <field name="no_total_product_variants_synced"/>
                <field name="is_shopify_template_exported_shopify" widget="boolean_toggle"/>
                <field name="product_published_defined"/>
            </list>
        </field>
    </record>

    <record id="setu_shopify_product_template_search_view" model="ir.ui.view">
        <field name="name">setu.shopify.product.template.search.view</field>
        <field name="model">setu.shopify.product.template</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Shopify Products">
                <field name="name" filter_domain="[('name','ilike',self)]"/>
                <field name="multi_ecommerce_connector_id"/>
                <field name="odoo_product_category_id"/>
                <field name="odoo_product_tmpl_id"/>
                <field name="shopify_tmpl_id" string="Shopify Template Id"/>
                <filter string="Exported In Shopify" name="exported_in_shopify" icon="terp-accessories-archiver"
                        domain="[('is_shopify_template_exported_shopify','=','True')]"/>
                <filter string="Not Exported In Shopify" name="not_exported_in_shopify" icon="terp-accessories-archiver"
                        domain="[('is_shopify_template_exported_shopify','!=','True')]"/>
                <filter string="Published in Online" name="published_in_online" icon="terp-accessories-archiver"
                        domain="[('product_published_defined','=','True')]"/>
                <filter string="Unpublished in Online" name="unpublished_in_online" icon="terp-accessories-archiver"
                        domain="[('product_published_defined','!=','True')]"/>
                <filter string="Archived" name="archive_products" icon="terp-accessories-archiver"
                        domain="[('active','=',False)]"/>
                <filter name="is_exported_in_shopify" string="Not Synced"
                        domain="[('is_shopify_template_exported_shopify','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Exported In Shopify" name="Exported In Shopify" domain="[]"
                            context="{'group_by':'is_shopify_template_exported_shopify'}"/>
                    <filter string="e-Commerce Connector" name="multi_ecommerce_connector_id"
                            context="{'group_by':'multi_ecommerce_connector_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="setu_shopify_product_template_form_view" model="ir.ui.view">
        <field name="name">setu.shopify.product.template.form.view</field>
        <field name="model">setu.shopify.product.template</field>
        <field name="arch" type="xml">
            <form string="Shopify Product Form View" create="false" readonly="1">
                <sheet>
                    <field name="active" class="oe_inline" invisible='1'/>
                    <div class="ribbon ribbon-top-right" invisible="active == True">
                        <span class="bg-danger">Archived</span>
                    </div>
                    <div class="oe_title" style="width: 390px;">
                        <label class="oe_edit_only" for="name" string="Title"/>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information">
                            <group>
                                <group>
                                    <field name="multi_ecommerce_connector_id"
                                           readonly="is_shopify_template_exported_shopify == True"/>
                                    <field name="odoo_product_tmpl_id" required="1" readonly="1"/>
                                    <field name="odoo_product_category_id"/>
                                </group>
                                <group>
                                    <field name="shopify_tmpl_id" readonly="1"/>
                                    <field name="no_total_product_variants" readonly="1"/>
                                    <field name="no_total_product_variants_synced"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="product_published_defined" readonly="1"/>
                                </group>
                                <group>
                                    <field name="setu_shopify_product_tag_ids" widget="many2many_tags"/>
                                </group>
                            </group>
                            <separator colspan="4" string="Product Description"/>
                            <field name="product_description" nolabel="1"/>
                        </page>
                        <page string="Variants" invisible="active == False">
                            <field name="setu_shopify_product_variant_ids" options="{'no_create': True,'no_edit':True}"
                                   nolabel="1">
                                <list create="false" >
                                    <field name="sequence"/>
                                    <field name="title"/>
                                    <field name="name"/>
                                    <field name="default_code"/>
                                    <field name="odoo_product_id"/>
                                    <field name="shopify_variant_id"/>
                                    <field name="multi_ecommerce_connector_id"/>
                                    <field name="is_exported_in_shopify" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                        <page string="Template Media">
                            <group string="Images Info" colspan="4">
                                <field name="setu_shopify_product_image_ids"
                                       context="{'default_setu_shopify_template_id':id}" mode="kanban"
                                       options="{'create_text':'Create Image Template','no_create_edit':True}"
                                       nolabel="1"/>
                            </group>
                        </page>
                        <page string="Sync">
                            <group>
                                <group>
                                    <field name="shopify_template_create" readonly="1"/>
                                    <field name="last_time_template_update" readonly="1"/>
                                </group>
                                <group>
                                    <field name="shopify_template_published" readonly="1"/>
                                    <field name="is_shopify_template_exported_shopify" readonly="1"
                                           widget="boolean_toggle"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="setu_shopify_product_template_main_action" model="ir.actions.act_window">
        <field name="name">Shopify Templates</field>
        <field name="res_model">setu.shopify.product.template</field>
        <field name="view_id" ref="setu_shopify_product_template_list_view"/>
    </record>

    <record id="setu_multi_ecommerce_connector_template_action" model="ir.actions.act_window">
        <field name="name">Shopify Templates</field>
        <field name="res_model">setu.shopify.product.template</field>
        <field name="view_id" ref="setu_shopify_product_template_list_view"/>
        <field name="domain">[('multi_ecommerce_connector_id','=',active_id)]</field>
    </record>

    <menuitem id="setu_shopify_product_template_main_menu" name="Shopify Template"
              parent='setu_shopify_connector.setu_shopify_product_catalog_main_menu'
              action="setu_shopify_product_template_main_action" sequence="1"/>
</odoo>
