<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="setu_shopify_risky_order_list_view" model="ir.ui.view">
        <field name="name">setu.shopify.risky.order</field>
        <field name="model">setu.shopify.risky.order</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list create="false" >
                <field name="original_shopify_order_id"/>
                <field name="is_cause_cancel_order"/>
                <field name="recommendation_status"/>
                <field name="source"/>
                <field name="risk_id"/>
                <field name="sale_order_id"/>
            </list>
        </field>
    </record>

    <record id="setu_shopify_risky_order_action" model="ir.actions.act_window">
        <field name="name">Shopify Risky Order</field>
        <field name="res_model">setu.shopify.risky.order</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="setu_shopify_connector.setu_shopify_risky_order_list_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Not found any shopify risky orders yet.
            </p>
        </field>
    </record>


    <menuitem id="shopify_risky_order_menu" name="Risky Orders"
              parent="setu_shopify_connector.setu_shopify_sale_order_main_menu"
              action="setu_shopify_risky_order_action" sequence="2"/>
</odoo>
