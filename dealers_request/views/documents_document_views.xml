<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="document_view_kanban_inherited_dealer" model="ir.ui.view">
        <field name="name">document.view.kanban.inherited.dealer</field>
        <field name="inherit_id" ref="documents.document_view_kanban"/>
        <field name="model">documents.document</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='alias_tag_ids']" position="after">
                <field name="reject_reason" widget="many2one_avatar_user"/>
            </xpath>
        </field>
    </record>


    <record id="documents_view_list_main_inherited_dealer" model="ir.ui.view">
        <field name="name">documents.view.list.main.inherited.dealer</field>
        <field name="inherit_id" ref="documents.documents_view_list_main"/>
        <field name="model">documents.document</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='owner_id']" position="after">
                <field name="reject_reason" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
