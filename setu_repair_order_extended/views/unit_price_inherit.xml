<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="add_attribute_in_price_unit_view" model="ir.ui.view">
        <field name="name">agrobolder.repair.extended.for.readonly.unitprice.view</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='parts']/field[@name='operations']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <field name="name" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>
</odoo>