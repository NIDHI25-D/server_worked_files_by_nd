<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="priority_rules_search_view" model="ir.ui.view">
            <field name="name">priority.rules.search.view</field>
            <field name="model">priority.rules</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="priority_rules_tree_view" model="ir.ui.view">
            <field name="name">priority.rules.tree.view</field>
            <field name="model">priority.rules</field>
            <field name="arch" type="xml">
                <list string="Assortment Team">
                    <field name="priority" widget="handle"/>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="priority_rules_form_view" model="ir.ui.view">
            <field name="name">priority.rules.form.view</field>
            <field name="model">priority.rules</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="transfer_domain" widget="domain" groups="base.group_no_one"  options="{'model':'stock.picking'}"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter reload_on_follower="True"/>
<!--                    <div class="oe_chatter">-->
<!--                        <field name="message_ids"/>-->
<!--                        <field name="message_follower_ids"/>-->
<!--                    </div>-->
                </form>
            </field>
        </record>

        <record id="action_priority_rules" model="ir.actions.act_window">
            <field name="name">Priority Rules</field>
            <field name="res_model">priority.rules</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_priority_rules"
                  name="Priority Rules"
                  parent="setu_prioritization_of_pickings_menu"
                  sequence="3"/>

        <menuitem id="sub_menu_priority_rules"
                  name="Priority Rules"
                  parent="setu_prioritization_of_pickings.menu_priority_rules"
                  action="action_priority_rules"
                  sequence="1"/>

    </data>
</odoo>