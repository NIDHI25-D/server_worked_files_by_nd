<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Inherit res.config.settings view form  -->
    <record id="new_arrival_products_menu_inherited_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">new.arrival.products.menu.inherited.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <!-- Added filed in res.config.settings view form -->
            <xpath expr="//block[@id='website_email_marketing']" position="after">
                <h2>New Arrival Products Menu Filter</h2>
                <div class="row mt16 o_settings_container" id="new_arrival_product_filter">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Arrival Product Filter Days</span>
                        <div class="text-muted">
                            <field name="new_arrival_products_filter_days" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>