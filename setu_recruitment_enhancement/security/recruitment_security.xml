<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="supervisior_group_hr_recruitment_applications" model="res.groups">
        <field name="name">Recruitment Supervisor</field>
        <field name="category_id" ref="base.module_category_human_resources_recruitment"/>
        <field name="implied_ids" eval="[(4, ref('hr_recruitment.group_hr_recruitment_manager'))]"/>
    </record>

    <data noupdate="0">
        <record id="hr_applicant_visibility" model="ir.rule">
            <field name="name">Only show applications departmentwise</field>
            <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
            <field name="domain_force">
                ['|',('department_id','=',user.employee_id.department_id.id),('department_id','child_of',user.employee_id.department_id.id)]
            </field>
            <field name="groups" eval="[(4, ref('hr_recruitment.group_hr_recruitment_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="hr_applicant_all_visibility" model="ir.rule">
            <field name="name">HR Applicant All Visibility</field>
            <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
            <field name="groups"
                   eval="[(4, ref('setu_recruitment_enhancement.supervisior_group_hr_recruitment_applications'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>


        <record id="hr_job_visibility" model="ir.rule">
            <field name="name">Only show job departmentwise</field>
            <field name="model_id" ref="hr.model_hr_job"/>
            <field name="domain_force">
                    ['|',('department_id','=',user.employee_id.department_id.id),('department_id','child_of',user.employee_id.department_id.id)]
            </field>
            <field name="groups" eval="[(4, ref('hr_recruitment.group_hr_recruitment_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>


        <record id="hr_department_visibility" model="ir.rule">
            <field name="name">Only show department departmentwise</field>
            <field name="model_id" ref="hr.model_hr_department"/>
            <field name="domain_force">
                ['|',('id','=',user.employee_id.department_id.id),('id','child_of',user.employee_id.department_id.id)]
            </field>
            <field name="groups" eval="[(4, ref('hr_recruitment.group_hr_recruitment_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="hr_department_all_visibility" model="ir.rule">
            <field name="name">HR Department All Visibility</field>
            <field name="model_id" ref="hr.model_hr_department"/>
            <field name="groups"
                   eval="[(4, ref('setu_recruitment_enhancement.supervisior_group_hr_recruitment_applications'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>


        <record id="hr_recruitment_stages_visibility" model="ir.rule">
            <field name="name">Only show stages departmentwise</field>
            <field name="model_id" ref="hr_recruitment.model_hr_recruitment_stage"/>
            <field name="domain_force">user.employee_id.get_stages()</field>
            <field name="groups" eval="[(4, ref('hr_recruitment.group_hr_recruitment_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="hr_recruitment_stages_all_visibility" model="ir.rule">
            <field name="name">HR Recruitment Stages All Visibility</field>
            <field name="model_id" ref="hr_recruitment.model_hr_recruitment_stage"/>
            <field name="groups"
                   eval="[(4, ref('setu_recruitment_enhancement.supervisior_group_hr_recruitment_applications'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>


        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=','website_hr_recruitment'), ('name','=','hr_job_officer')] "/>
            </function>
            <value eval=" {'noupdate': False} "/>
        </function>


        <record id="website_hr_recruitment.hr_job_officer" model="ir.rule">
            <field name="name">Job Positions: HR Officer</field>
            <field name="model_id" ref="hr.model_hr_job"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups"
                   eval="[(6,0,[ref ('setu_recruitment_enhancement.supervisior_group_hr_recruitment_applications')])]"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=','website_hr_recruitment'), ('name','=','hr_job_officer')] "/>
            </function>
            <value eval=" {'noupdate': True} "/>
        </function>
    </data>


</odoo>