<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="pos_config_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.config.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_inventory_section']" position="inside">
                <setting id="barcode_scanner">
                    <div class="o_setting_left_pane">
                        <field name="wk_display_stock"/>
                    </div>
                    <div class="text-muted">
                        Display product's stock info in POS
                    </div>
                    <div class="content-group mt16 row" invisible="not wk_display_stock">
                        <div class="content-group mt16 row">
                            <label string="Hide out of stock products" for="wk_hide_out_of_stock"
                                   class="col-md-5 o_light_label"/>
                            <field name="wk_hide_out_of_stock"/>
                        </div>
                        <div class="content-group mt16 row">
                            <label string="Stock type" for="wk_stock_type" class="col-md-5 o_light_label"/>
                            <field name="wk_stock_type"/>
                        </div>
                        <div class="content-group mt16 row">
                            <label string="Allow Order When Out-of-Stock" for="wk_continous_sale"
                                   class="col-md-5 o_light_label"/>
                            <field name="wk_continous_sale"/>
                        </div>
                        <div class="content-group mt16 row" invisible="wk_continous_sale">
                            <label string="Custom message" for="wk_error_msg" class="col-md-5 o_light_label"/>
                            <field name="wk_error_msg"/>
                        </div>
                        <div class="content-group mt16 row" invisible="wk_continous_sale">
                            <label string="Deny order when product stock is equal to" for="wk_deny_val"
                                   class="col-md-5 o_light_label"/>
                            <field name="wk_deny_val"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>