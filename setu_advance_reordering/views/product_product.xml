<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="from_product_advance_reorder_view" model="ir.ui.view">
            <field name="name">product.product.advance.reorder.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='packaging']" position="inside">
                    <group string="Advance Reorder Process" name="advance_reorder_process">
                        <field name="follow_vendor_moq_rule"/>
                        <field name="capping_qty"/>
                    </group>
                </xpath>
                <xpath expr="//group[@name='purchase']/group/group[1]/field[@name='description_purchase']"
                       position="after">
<!--                    <label for="stock_requested_by_commercial"/>-->
                    <field name="stock_requested_by_commercial"/>
<!--                    </div>-->
                </xpath>
                <xpath expr="//group[@name='purchase']" position="before">
                    <group>
                        <group name="ar_planner_template" string="AR Planner Template">
                            <label for="reorder_planner_template_ids"/>
                            <div class="o_row">
                                <field name="reorder_planner_template_ids" widget="many2many_tags"
                                       options="{'no_create':1, 'no_create_edit': 1}"/>
                            </div>
                        </group>
                        <group>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="update_orderpoint_product_advance_reorder_view" model="ir.ui.view">
            <field name="name">update.orderpoint.product.product.advance.reorder.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Advance Reordering">
                        <group name="orderpoints_config">
                            <group name="update_orderpoints">
                                <field name="update_orderpoint"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="product_supplierinfo_advance_reorder_form_view" model="ir.ui.view">
            <field name="name">product.supplierinfo.advance.reorder.form</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='price']" position="before">
                    <label for="reorder_minimum_quantity"/>
                    <div class="o_row">
                        <field name="reorder_minimum_quantity"/>
                        <field name="product_uom" groups="uom.group_uom"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="product_supplierinfo_advance_reorder_tree_view" model="ir.ui.view">
            <field name="name">product.supplierinfo.advance.reorder.form</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
                <field name="price" position="after">
                    <field name="reorder_minimum_quantity" optional=""/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_form_product_variant_advance_reordering">
            <field name="name">variant advance reordering form view</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="can_be_used_for_advance_reordering"/>
                        <label for="can_be_used_for_advance_reordering"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_open_wizard_for_remove_from_template" model="ir.actions.server">
            <field name="name">Remove from AR Template</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="state">code</field>
            <field name="code">
                action = records.action_remove_from_ar_template()
            </field>
        </record>

    </data>
</odoo>
