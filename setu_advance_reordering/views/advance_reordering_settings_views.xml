<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="advance_reordering_settings_view_form" model="ir.ui.view">
        <field name="name">advance.reordering.settings.view.form</field>
        <field name="model">advance.reordering.settings</field>
        <field name="arch" type="xml">
            <form create="false" delete="false">
                <sheet>
                    <h2>Advance Reordering With Real Demand</h2>
                    <div>
                        <div class="row mt16 o_settings_container" name="advance_reordering_with_demand">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div>
                                    <label for="reorder_rounding_method"/>
                                    <div class="text-muted">
                                        Select the rounding method for demand generation in Reorder with Real Demand and
                                        <br></br>
                                        Replenishment from Warehouse Replenishment. Rounding up will increase the
                                        <br></br>
                                        calculated demand to the nearest whole number, while rounding down will decrease
                                        it.
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="reorder_rounding_method" class="o_light_label"
                                                   widget="selection"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div>
                                    <label for="reorder_round_quantity"/>
                                    <div class="text-muted">
                                        Enter the Rounding Quantity, and demand generated will be rounded to the
                                        <br></br>
                                        nearest multiple of this quantity based on the selected Rounding Method
                                        <br></br>
                                        (either Rounding Up or Rounding Down)
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="reorder_round_quantity"  string="Make it Rounding Quantity" class="oe_inline"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container" name="advance_reordering_vendor_lead">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div>
                                    <label for="vendor_lead_days_method"/>
                                    <div class="text-muted">
                                        Set the method for determining vendor lead days within the Reorder with Real
                                        <br></br>
                                        Demand Planner system for placing orders.
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="vendor_lead_days_method" class="oe_inline"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div invisible="vendor_lead_days_method != 'static'">
                                    <label for="vendor_static_lead_days"/>
                                    <div class="text-muted">
                                        Set Rounding Quantity for Demand generate from Advance Reorder with Real
                                        Demand<br></br> and Replenishment from Warehouses
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="vendor_static_lead_days" class="oe_inline"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Advance Reordering With Orderpoint</h2>
                    <div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div>
                                    <label for="purchase_lead_calc_base_on"/>
                                    <div class="text-muted">
                                        Select an option to determine whether the lead time should be based on the
                                        <br></br>
                                        vendor lead time set in the purchase tab of the product, the actual lead time
                                        <br></br>
                                        calculated from the purchase order confirmed date to product receipt, or a
                                        <br></br>
                                        static lead time as per User's choice.
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="purchase_lead_calc_base_on" class="o_light_label"
                                                   widget="selection"/>
                                        </div>
                                    </div>
                                </div>
                                <br></br>
                                <div invisible="purchase_lead_calc_base_on not in ['vendor_lead_time','real_time']">
                                    <div>
                                        <label for="max_lead_days_calc_method"/>
                                        <div class="text-muted">
                                            Select between two options for Maximum Lead Days calculation in Reorder with
                                            <br></br>
                                            Order Points: Either Actual Maximum Lead Time, determined from Purchase
                                            <br></br>
                                            History or Average + Extra Time, calculating the average lead time plus an
                                            <br></br>
                                            additional duration.
                                        </div>
                                        <div class="content-group">
                                            <div class="mt16">
                                                <field name="max_lead_days_calc_method" class="o_light_label"
                                                       widget="selection"/>
                                            </div>
                                        </div>
                                    </div>
                                    <br></br>
                                    <div invisible="max_lead_days_calc_method != 'avg_extra_percentage'">
                                        <label for="extra_lead_percentage"/>
                                        <div class="text-muted">
                                            (Maximum Lead time + Extra Percentage) as Maximum Lead time of purchase for
                                            <br></br>
                                            Advance Reordering with Order points
                                        </div>
                                        <div class="content-group">
                                            <div class="mt16">
                                                <field name="extra_lead_percentage" class="oe_inline"
                                                       widget="percentage"
                                                       style="text-align: right;"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div>
                                    <label for="max_sales_calc_method"/>
                                    <div class="text-muted">
                                        Select between two options for maximum daily sales calculation in Reorder with
                                        <br></br>
                                        order points: Either Maximum Daily Sales, identifying the highest daily quantity
                                        <br></br>
                                        sold, or Average + Extra Percentage, calculating the average daily quantity sold
                                        <br></br>
                                        plus an additional percentage.
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="max_sales_calc_method" class="o_light_label"
                                                   widget="selection"/>
                                        </div>
                                    </div>
                                </div>
                                <br></br>
                                <div invisible="max_sales_calc_method != 'avg_extra_percentage'">
                                    <label for="extra_sales_percentage"/>
                                    <div class="text-muted">
                                        (Maximum Daily Sales + Extra Percentage) as Maximum Daily Sales of sales for
                                        <br></br>
                                        Advance Reordering with Order points
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="extra_sales_percentage" class="oe_inline" widget="percentage"
                                                   style="text-align: right;"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt16 o_settings_container"
                             name="advance_reordering_day_to_consider_purchase_history">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div>
                                    <label for="days_to_consider_purchase_history"/>
                                    <div class="text-muted">
                                        Days to consider purchase history
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="days_to_consider_purchase_history" class="oe_inline"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div/>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_advance_reordering_settings" model="ir.actions.server">
        <field name="name">Settings - Advance Reordering</field>
        <field name="model_id" ref="model_advance_reordering_settings"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
            action = model.open_record_action()
        </field>
    </record>

</odoo>
