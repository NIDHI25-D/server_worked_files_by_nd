            </field>
        </record>

        <record id="tree_advance_reorder_orderprocess" model="ir.ui.view">
            <field name="name">advance.reorder.orderprocess.tree</field>
            <field name="model">advance.reorder.orderprocess</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="vendor_id"/>
                    <field name="reorder_amount" widget="monetary"/>
                    <field name="reorder_total_volume"/>
                    <field name="reorder_date"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="actions_advance_reorder_orderprocess" model="ir.actions.act_window">
            <field name="name">Advance Reorder with Real Demand</field>
            <field name="res_model">advance.reorder.orderprocess</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="action_calculate_reorder_amount" model="ir.actions.server">
            <field name="name">Calculate Reorder amount</field>
            <field name="model_id" ref="setu_advance_reordering.model_advance_reorder_orderprocess"/>
            <field name="binding_model_id" ref="setu_advance_reordering.model_advance_reorder_orderprocess"/>
            <field name="state">code</field>
            <field name="code">
                action = records.update_to_be_ordered()
            </field>
        </record>

        <record id="action_validates_orders" model="ir.actions.server">
            <field name="name">Validate</field>
            <field name="model_id" ref="setu_advance_reordering.model_advance_reorder_orderprocess"/>
            <field name="binding_model_id" ref="setu_advance_reordering.model_advance_reorder_orderprocess"/>
            <field name="state">code</field>
            <field name="code">
                action = records.action_reorder_confirm()
            </field>
        </record>

        <record id="action_establish_po_type" model="ir.actions.server">
            <field name="name">Establish PO Type</field>
            <field name="model_id" ref="setu_advance_reordering.model_advance_reorder_orderprocess"/>
            <field name="binding_model_id" ref="setu_advance_reordering.model_advance_reorder_orderprocess"/>
            <field name="state">code</field>
            <field name="code">
                action = records.action_open_establish_po_wiz()
            </field>
        </record>

    </data>
</odoo>
