<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="view_remove_products_from_template_wizard" model="ir.ui.view">
        <field name="name">view.remove.products.from.template.wizard</field>
        <field name="model">remove.products.from.template.wiz</field>
        <field name="arch" type="xml">
            <form string="Remove From AR Template">
                <group>
                    <div class="alert alert-info" colspan="4" role="alert">
                        Selects The AR Template From Which One Will Remove The Product.
                    </div>
                    <group>
                        <field name="reorder_planner_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button string="Remove" class="btn-primary" data-hotkey="q" type="object"
                            name="action_remove_products_from_planner"/>
                    <button string="cancel" class="btn-secondary" data-hotkey="z" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_remove_products_from_template_wizard" model="ir.actions.act_window">
        <field name="name">Remove From AR Template</field>
        <field name="res_model">remove.products.from.template.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


</odoo>