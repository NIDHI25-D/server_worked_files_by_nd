<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="login_activity_view_form" model="ir.ui.view">
            <field name="name">login_activity_view_form</field>
            <field name="model">login.activity</field>
            <field name="arch" type="xml">
                <form string="login_activity_form">
                    <sheet>
                        <group>
                            <field name="user_id" domain="[('id' ,'!=', 2)]" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="group_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Login" class="btn-primary" name="login_to_user" type="object"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

