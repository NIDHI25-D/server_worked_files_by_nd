<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="product_additional_details" name='Product Additional Details' inherit_id="website_sale.product"
                  priority="6">
            <xpath expr="//div[@id='product_details']/h1" position="after">
                <div class="table-responsive">
                    <table class="table table-striped table-sm table-bordered">
                        <thead>
                            <tr>
                                <th class="table-dark" style="color:#FF9C00; padding:15px; text-align:left;">
                                    Brand
                                </th>
                                <td style="padding:15px; text-align:left;">
                                    <span t-field="product.marca_ids"/>
                                </td>
                            </tr>
                            <tr>
                                <th class="table-dark" style="color:#FF9C00; padding:15px; text-align:left;">
                                    Compatible
                                </th>
<!--                                <td style="padding:15px; text-align:left;">-->
<!--                                    <span t-field="product.compatible_ids"/>-->
<!--                                </td>-->
                            </tr>

                        </thead>
                    </table>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
