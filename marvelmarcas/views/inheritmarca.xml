<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_marca_form_inherit_new" model="ir.ui.view">
        <field name="name">Marcas</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="marca_ids" widget="many2many_tags"
                       options="{'color_field': 'color', 'no_create_edit': True}" string="Marcas Compatibles"
                       required="True"/>
                <field name="refaoriginal_ids" widget="many2many_tags"
                       options="{'color_field': 'color', 'no_create_edit': True}"/>
            </field>
        </field>
    </record>
</odoo>
