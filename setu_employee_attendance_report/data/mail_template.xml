<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <data noupdate="0">
        <!--Email template -->
        <record id="email_template_to_send_attendance_data_to_manager" model="mail.template">
            <field name="name">Send attendance report to manager</field>
            <field name="email_from">{{object.company_id.catchall_formatted or ''}}</field>
            <field name="email_to">{{ctx['email']}}</field>
            <field name="subject">{{ctx['report']}} attendance Report</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="lang">{{object.user_id.partner_id.lang}}</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <p>Hello <t t-esc="ctx.get('name','')"/>  </p>
                <p>Here is the <t t-esc="ctx.get('report','')"/> attendance report of employees</p>
            </field>

        </record>

        <record id="email_template_to_send_attendance_data_to_employee" model="mail.template">
            <field name="name">Send attendance report to employee</field>
            <field name="email_from">{{object.company_id.catchall_formatted or ''}}</field>
            <field name="email_to">{{ctx['email']}}</field>
            <field name="subject">{{ctx['report']}} attendance Report for employee</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="lang">{{ctx['lang']}}</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <p>Hello <t t-esc="ctx.get('name','')"/></p>
                <p>Here is the <t t-esc="ctx.get('report','')"/> attendance report</p>
            </field>

        </record>
    </data>

</odoo>
