<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="setu_advance_budget_forecasted_sheet_line_tree_view" model="ir.ui.view">
            <field name="name">setu.advance.budget.forecasted.sheet.line.tree.view</field>
            <field name="model">setu.advance.budget.forecasted.sheet.line</field>
            <field name="arch" type="xml">
                <tree string="Forecasted Sheet Line" create="false">
                    <field name="setu_advance_budget_forecasted_id"/>
                    <field name="setu_advance_budget_forecasted_sheet_id"/>
                    <field name="analytic_account_id"/>
                    <field name="planned_amount"/>
                </tree>
            </field>
        </record>

        <record id="setu_advance_budget_forecasted_sheet_line_form_view" model="ir.ui.view">
            <field name="name">setu.advance.budget.forecasted.sheet.line.form.view</field>
            <field name="model">setu.advance.budget.forecasted.sheet.line</field>
            <field name="arch" type="xml">
                <form string="Forecasted Sheet Line">
                    <sheet>
                        <group>
                            <group>
                                <field name="setu_advance_budget_forecasted_id" invisible="1"/>
                                <field name="analytic_account_id"/>
                            </group>
                            <group>
                                <field name="setu_advance_budget_forecasted_sheet_id" invisible="1"/>
                                <field name="account_id" requird="True"/>
                            </group>
                        </group>
                        <notebook>
                             <page string="Forecasted Position" name="forecasted_position">
                                  <field name="setu_advance_budget_forecasted_position_ids" colspan="4"  nolabel="1"/>
                             </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="setu_advance_budget_forecasted_sheet_line_action" model="ir.actions.act_window">
            <field name="name">Forecasted Sheet Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">setu.advance.budget.forecasted.sheet.line</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Forecasted Sheet Line.
                </p>
            </field>
        </record>

        <record id="setu_advance_budget_forecasted_sheet_line_action_open" model="ir.actions.act_window">
            <field name="name">Forecasted Sheet Line</field>
            <field name="res_model">setu.advance.budget.forecasted.sheet.line</field>
        </record>

        <menuitem id="setu_advance_budget_forecasted_sheet_line_menu" name="Forecasted Sheet Line"  parent="setu_advance_budget_forecasted_planing_main_menu" action="setu_advance_budget_forecasted_sheet_line_action"/>

    </data>
</odoo>