<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_order_bbva_page" model="ir.ui.view">
            <field name="name">sale.order.bbva.page</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr='//notebook' position='inside'>
                    <page string="BBVA Info" name="bbva_info" attrs="{'invisible': [('payment_date', '=', False)]}"
                    >
                        <group>
                            <group>
                                <field name="payment_reference" readonly="1"/>
                                <field name="payment_folio" readonly="1"/>
                                <field name="payment_date" readonly="1"/>
                                <field name="folio" readonly="1"/>
                                <field name="payment_method" readonly="1"/>
                                <field name="card_holder_name" readonly="1"/>
                                <field name="card_number" readonly="1"/>
                                <field name="authorization" readonly="1"/>
                                <field name="installments" readonly="1"/>
                                <field name="payment_state" readonly="1"/>
                            </group>
                            <group>
                                <field name="hmac_created_without_authorization" groups="base.group_no_one" readonly="1"/>
                                <field name="hmac_created" groups="base.group_no_one" readonly="1"/>
                                <field name="hmac_received"  groups="base.group_no_one" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>