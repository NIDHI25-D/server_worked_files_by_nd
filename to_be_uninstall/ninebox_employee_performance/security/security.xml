            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">user.employee_id.get_domain_for_child_ids()</field>
        </record>


        <record id="ninebox_performance_supervisor_visibility" model="ir.rule">
