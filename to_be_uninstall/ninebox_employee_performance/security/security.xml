        <record id="module_ninebox_employee_performance" model="ir.module.category">
            <field name="name">Ninebox Employee Performance</field>
            <field name="sequence">5</field>
        </record>
        <record id="group_ninebox_performance_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_ninebox_employee_performance"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_ninebox_performance_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_ninebox_employee_performance"/>
            <field name="implied_ids" eval="[(4, ref('ninebox_employee_performance.group_ninebox_performance_user'))]"/>
        </record>        
    </data>
    <record id="group_ninebox_performance_supervisor" model="res.groups">
