<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="action_assessment_rating_tree">
        <field name="name">Assessment Rating</field>
        <field name="model">assessment.rating</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" string="Assessment Rating">
                <field name="name"/>
                <field name="color"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="action_assessment_rating_form">
        <field name="name">Assessment Rating</field>
        <field name="model">assessment.rating</field>
        <field name="arch" type="xml">
            <form string="Assessment Rating" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="rate" readonly="1"/>
                        </group>
                        <group>
                            <field name="color" placeholder="0-10"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_assessment_rating">
        <field name="name">Assessment Rating</field>
        <field name="res_model">assessment.rating</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create new Rating</p>
        </field>
    </record>


    <menuitem
            id="menu_action_assessment_rating"
            name="Assessment Rating"
            action="action_assessment_rating"
            groups="ninebox_employee_performance.group_ninebox_performance_manager"
            parent="menu_hr_performance_settings"
            sequence="10"/>

</odoo>