<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="core_violation_report_form" model="ir.ui.view">
            <field name="name">core.violation.report.form</field>
            <field name="model">core.violation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Core Violation Report">
                        <group expand="0" string="Select time range">
                            <group expand="0">
                                <field name="start_date" required="True"/>
                                <field name="end_date" required="True"/>
                            </group>
                            <group expand="0">
                                <field name="start_time" required="True"/>
                                <field name="end_time" required="True"/>
                            </group>
                        </group>
                        <group expand="0" string="Select Employee">
                            <group expand="0">
                                <field name="all_employee"
                                       attrs="{'invisible': [('employee_id', '!=', False)],'invisible': [('employee_id', '!=', False)]}"/>
                            </group>
                            <group expand="0">
                                <field name="employee_id"
                                       attrs="{'invisible': [('all_employee', '=', True)],'required':[('all_employee', '=', False)]}"/>
                            </group>
                        </group>
                    </sheet>

                    <footer>
                        <button name="download_violation_report" string="CREATE" type="object" class="oe_highlight"/>
                        <button name="show_violation_report_in_listview" string="VIEW DATA" type="object"
                                class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="core_violation_report_tree" model="ir.ui.view">
            <field name="name">core.violation.report.tree</field>
            <field name="model">core.violation.tree</field>
            <field name="arch" type="xml">
                <tree string="Core Time Violation" create="false">
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="violation_check_in"/>
                    <field name="violation_check_out"/>
                    <field name="violation_selection"/>
                    <field name="remark_field"/>
                </tree>
            </field>
        </record>

        <record id="core_time_violation_search" model="ir.ui.view">
            <field name="name">core.time.violation.search</field>
            <field name="model">core.violation.tree</field>
            <field name="arch" type="xml">
                <search string="Core Time Violation">
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="violation_check_in"/>
                    <field name="violation_check_out"/>
                    <field name="violation_selection"/>
                    <filter string="Checkin violation" name="violation_check_in"
                            domain="[('violation_selection','=','check_in_violation')]"/>
                    <filter string="Checkout violation" name="violation_check_out"
                            domain="[('violation_selection','=','check_out_violation')]"/>
                    <filter string="Both" name="both" domain="[('violation_selection','=','both')]"/>
                    <filter string="Missed" name="missed" domain="[('violation_selection','=','missed')]"/>
                    <separator/>
                    <filter string="Employee" context="{'group_by':'employee_id'}" name="employee_id"/>
                    <filter string="Date" context="{'group_by':'date'}" name="date"/>
                    <filter string="Type of Violation" context="{'group_by':'violation_selection'}"
                            domain="[('violation_selection','=',violation_selection)]" name="violation_selection"/>
                    <separator/>
                </search>
            </field>
        </record>


        <record id="core_violation_report_action" model="ir.actions.act_window">
            <field name="name">Core Violation Report</field>
            <field name="res_model">core.violation</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="hr_attendance.menu_hr_attendance_report" model="ir.ui.menu">
            <field name="action" eval="False"/>
        </record>

        <!--        <menuitem id="inherit_reporting_button" name="Reporting"-->
        <!--                  parent="hr_attendance.hr_attendance_report_view_graph"-->
        <!--                  groups="hr_attendance.group_hr_attendance_user" action="hr_attendance.hr_attendance_action_graph"/>-->
        <menuitem id="inherit_reporting_button" name="Reporting"
                  parent="hr_attendance.menu_hr_attendance_report"
                  sequence="30" groups="hr_attendance.group_hr_attendance_user"
                  action="hr_attendance.hr_attendance_report_action"/>


        <menuitem id="core_violation_action_menu" action="core_violation_report.core_violation_report_action"
                  parent="hr_attendance.menu_hr_attendance_report"
                  name="Core time violation"
        />
    </data>
</odoo>