<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="price_bases_tree_view" model="ir.ui.view">
        <field name="name">price.bases.tree</field>
        <field name="model">price.bases</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="day_start"/>
                <field name="day_end"/>
                <field name="discount"/>
            </list>
        </field>
    </record>

    <record id="price_bases_form_view" model="ir.ui.view">
        <field name="name">price.bases.form.view</field>
        <field name="model">price.bases</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <label for="day_start" string="Date"/>
                        <div>
                            From
                            <field name="day_start" class="oe_inline"/>
                            to
                            <field name="day_end" class="oe_inline"/>
                        </div>
                        <field name="discount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


