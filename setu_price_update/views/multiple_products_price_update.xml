<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_import_product_to_sale" model="ir.ui.view">
            <field name="name">import.products.to.sale.form</field>
            <field name="model">multiple.products.price.update</field>
            <field name="arch" type="xml">
                <form string="Products">
                    <field name="product_ids"/>
                    <footer>
                        <button name="create_items" string="Add Products" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_import_product_to_price_update" model="ir.actions.act_window">
            <field name="name">Add Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">multiple.products.price.update</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_import_product_to_sale"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>