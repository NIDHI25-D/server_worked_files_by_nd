<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">

        <record model="ir.module.category" id="module_category_price_update">
            <field name="name">Price Update</field>
            <field name="description">Helps you manage your Price Update users</field>
            <!--            <field name="sequence">16</field>-->
        </record>
        <record id="group_price_update_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_price_update"/>
        </record>
        <record id="group_price_update_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_price_update"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_price_update_user'))]"/>
        </record>
    </data>
</odoo>
