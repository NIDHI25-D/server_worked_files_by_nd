<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="setu_invoice_request_edi_cancel_view_tree" model="ir.ui.view">
            <field name="name">setu_invoice_request_edi_cancel_view_tree</field>
            <field name="model">setu.invoice.cancel</field>
            <field name="arch" type="xml">
                <list string="Create Request Edi Reasons" editable="bottom">
                    <field name="name" required="1"/>
                </list>
            </field>
        </record>

        <record id="setu_invoice_credit_note_cancel_view_tree" model="ir.ui.view">
            <field name="name">setu_invoice_credit_note_cancel_view_tree</field>
            <field name="model">setu.invoice.cancel</field>
            <field name="arch" type="xml">
                <list string="Create Credit Notes Reasons" editable="bottom">
                    <field name="name" required="1"/>
                </list>
            </field>
        </record>

        <record id="request_edi_cancel_action" model="ir.actions.act_window">
            <field name="name">Request Edi Cancel Reasons</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">setu.invoice.cancel</field>
            <field name="context">{'default_is_return': True}</field>
            <field name="domain">[('is_return', '=', True)]</field>
            <field name="view_mode">list</field>
        </record>

        <record id="credit_note_cancel_action" model="ir.actions.act_window">
            <field name="name">Credit Note Cancel Reasons</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">setu.invoice.cancel</field>
            <field name="context">{'default_is_return': False}</field>
            <field name="domain">[('is_return', '=', False)]</field>
            <field name="view_mode">list</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem
                id="cancel_invoice_reasons"
                name="Cancel Invoice Reasons"
                parent="accountant.menu_accounting"
                groups="setu_invoice_cancellation.cancel_invoice_group"
                sequence="25"/>
        <menuitem id="credit_note_cancel_reason" name="Credit Note Reasons" parent="cancel_invoice_reasons" action="credit_note_cancel_action"/>
        <menuitem id="request_edi_cancel_reason" name="Request Edi Cancel Reasons" parent="cancel_invoice_reasons" action="request_edi_cancel_action"/>
    </data>
</odoo>